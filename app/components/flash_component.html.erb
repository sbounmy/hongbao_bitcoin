<% if display_mode == :toast %>
  <!-- Toast Container -->
  <div class="toast toast-top toast-center z-50">
    <% flash.each do |type, message| %>
      <div class="<%= flash_classes(type) %> shadow-lg mb-2"
           data-controller="flash"
           data-flash-auto-dismiss-value=<%= auto_dismiss_delay(type)%>>
        <%= heroicon icon_for_type(type), variant: :solid, class: "h-6 w-6 shrink-0" %>
        <div>
          <span><%= message %></span>
        </div>
        <button class="btn btn-sm btn-ghost" data-action="click->flash#dismiss">
          <%= heroicon "x-mark", variant: :solid, class: "h-4 w-4" %>
        </button>
      </div>
    <% end %>
  </div>
<% elsif display_mode == :modal %>
  <!-- Modal for Flash Messages -->
  <% flash.each do |type, message| %>
    <dialog class="modal modal-open" data-controller="flash-modal">
      <div class="modal-box">
        <h3 class="font-bold text-lg flex items-center gap-2">
          <%= heroicon icon_for_type(type), variant: :solid, class: "h-6 w-6" %>
          <%= type.to_s.humanize %>
        </h3>
        <p class="py-4"><%= message %></p>
        <div class="modal-action">
          <button class="btn" data-action="click->flash-modal#close">Close</button>
        </div>
      </div>
      <form method="dialog" class="modal-backdrop" data-action="click->flash-modal#close">
        <button>close</button>
      </form>
    </dialog>
  <% end %>
<% else %>
  <!-- Inline Alerts -->
  <div class="container mx-auto px-4 pt-4">
    <% flash.each do |type, message| %>
      <div class="<%= flash_classes(type) %> mb-4"
           data-controller="flash"
           data-flash-auto-dismiss-value="<%= auto_dismiss_delay(type) %>">
        <%= heroicon icon_for_type(type), variant: :solid, class: "h-6 w-6 shrink-0" %>
        <span><%= message %></span>
        <button class="btn btn-sm btn-ghost" data-action="click->flash#dismiss">
          <%= heroicon "x-mark", variant: :solid, class: "h-4 w-4" %>
        </button>
      </div>
    <% end %>
  </div>
<% end %>