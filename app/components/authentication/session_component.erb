<%= form_with(url: login_path, class: "space-y-4") do |form| %>
    <div class="flex justify-center">
        <%= link_to signup_path, class: "btn btn-ghost flex-none" do %>
            <%= heroicon('arrow-left', class: "w-6 h-6") %>
        <% end %>
        <h2 class="flex-1 card-title justify-center text-2xl font-bold">Log in</h2>
    </div>
    <div class="form-control gap-2">
        <%= form.hidden_field :email, value: user.email,
            class: "input input-bordered w-full",
            placeholder: "Email address" %>

        <%= form.password_field :password,
            required: true,
            class: "input input-bordered w-full",
            placeholder: "Password" %>
    </div>

    <%= form.submit "Sign in", class: "btn btn-primary w-full" %>
<% end %>