<%# Paper preview component with real-time updates via broadcasting %>
<div id="<%= dom_id(paper, :preview) %>" class="paper-preview-component relative <%= container_classes %>">
  <% if processing? %>
    <%# Show processing state %>
    <div class="flex flex-col items-center gap-4">
      <div class="loading loading-spinner loading-lg"></div>
      <p class="text-base-content/70">Generating your paper...</p>
    </div>
  <% elsif image_url %>
    <%# Show paper image %>
    <%= image_tag image_url, class: image_classes, alt: "Paper preview" %>
  <% else %>
    <%# Show placeholder when no image available %>
    <div class="<%= placeholder_classes %> bg-base-300 rounded-lg flex items-center justify-center">
      <span class="text-base-content/50">No image available</span>
    </div>
  <% end %>
</div>

<%# Subscribe to real-time updates %>
<%= turbo_stream_from paper %>