<%# Paper selection card with front/back flip animation %>
<div class="papers-item-component group/paper relative break-inside-avoid mb-4" id="<%= dom_id(item) %>">
  <div class="group-open/paper:ring-secondary group-open/paper:ring-8 relative flex flex-col w-full">
    <div class="group/hover w-full flex-shrink-0 [perspective:1000px] transition-all block">
      <div class="relative flex flex-col w-full transition-transform duration-500 [transform-style:preserve-3d] group-hover/paper:[transform:rotateY(180deg)]">
        <%# Front face %>
        <div class="bg-base-300 rounded-lg w-full [-webkit-backface-visibility:hidden] [backface-visibility:hidden]">
          <%= render_face(image_url: image_front_url) %>
        </div>

        <%# Back face %>
        <div class="bg-base-300 rounded-lg absolute top-0 left-0 w-full [-webkit-backface-visibility:hidden] [backface-visibility:hidden] [transform:rotateY(180deg)]">
          <%= render_face(image_url: image_back_url) %>
        </div>
      </div>
    </div>

    <%# Stats overlay %>
    <div class="absolute bottom-2 right-2 flex items-center gap-2 z-10 pointer-events-none">
      <div class="paper-views-count flex items-center gap-1 bg-black/60 backdrop-blur-sm rounded-full px-2 py-1 text-white text-sm pointer-events-auto">
        <%= heroicon "eye", variant: :solid, class: "w-4 h-4" %>
        <span><%= item.views_count %></span>
      </div>
    </div>
  </div>
</div>
<%= turbo_stream_from item if broadcast %>
