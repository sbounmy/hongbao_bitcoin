<div>
  <!-- Two main cards grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-2 mb-3">
    <!-- Card 1: Hongbao Stats (Red with Gold Gradient) -->
    <div class="card bg-gradient-to-br from-red-600 via-red-700 to-amber-700 text-white shadow-xl h-full">
      <div class="card-body flex flex-col justify-between">
          <h3 class="text-base font-medium opacity-90">I would have gifted</h3>

        <div class="mt-auto pt-4">
          <span class="text-4xl font-bold"><%= format_currency(total_gifted_usd) %></span>
        </div>
      </div>
    </div>

    <!-- Card 2: Current Value (Bitcoin Orange Background) -->
    <div class="card bg-orange-500 text-white shadow-xl h-full">
      <div class="card-body flex flex-col justify-between">
        <div>
          <h3 class="text-base font-medium opacity-90">Worth today</h3>
          <div class="mt-3">
            <span class="badge badge-outline badge-lg <%= percentage_change.positive? ? 'badge-success' : percentage_change.negative? ? 'badge-error' : 'badge-ghost' %> text-white font-bold px-3 py-4 text-lg">
              <%= percentage_change.positive? ? "+" : "" %><%= percentage_change %>%
            </span>
          </div>
        </div>

        <div class="mt-auto pt-4">
          <span class="text-4xl font-bold"><%= format_currency(current_portfolio_value) %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Compact Bitcoin amount below -->
  <div class="flex items-center justify-center gap-2 px-4 py-3 bg-base-200 rounded-lg">
    <span class="text-sm font-medium text-base-content/70">Total:</span>
    <span class="font-bold text-orange-500 text-lg">
      <%= format_bitcoin(total_bitcoin_accumulated) %>
    </span>
    <span class="text-sm text-base-content/50">since <%= earliest_year %></span>
  </div>
</div>

