<%# Component to display a single contributor avatar %>
<div class="flex flex-col items-center gap-2 text-center">
  <% if link_url.present? %>
    <%= link_to link_url, target: "_blank", rel: "noopener noreferrer", class: "group" do %>
      <%= image_tag avatar_url, alt: name, class: "h-16 w-16 rounded-full object-cover ring-1 ring-gray-300 dark:ring-gray-700 group-hover:opacity-80 transition-opacity" %>
      <span class="mt-2 block text-sm font-medium text-gray-800 dark:text-gray-200 group-hover:text-main-600 dark:group-hover:text-main-400"><%= name %></span>
    <% end %>
  <% else %>
    <%= image_tag avatar_url, alt: name, class: "h-16 w-16 rounded-full object-cover ring-1 ring-gray-300 dark:ring-gray-700" %>
    <span class="mt-2 block text-sm font-medium text-gray-800 dark:text-gray-200"><%= name %></span>
  <% end %>
</div>