<%# Component to display a single contributor avatar %>
<div class="flex flex-col items-center gap-2 text-center <%= options[:class] %>">
  <div class="avatar indicator w-full h-full">
    <%= badge %>
    <% if link_url&.present? %>
      <%= link_to link_url, target: "_blank", rel: "noopener noreferrer", class: "group" do %>
        <%= image_tag avatar_url, alt: name, class: "h-full w-full rounded-full object-cover ring-1 ring-gray-300 group-hover:opacity-80 transition-opacity" %>
      <% end %>
    <% else %>
      <%= image_tag avatar_url, alt: name, class: "w-full rounded-full object-cover ring-1 ring-gray-300" %>
    <% end %>
  </div>
</div>