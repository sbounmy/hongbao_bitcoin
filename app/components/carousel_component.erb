<div data-controller="gallery" class="w-full h-96 flex items-center justify-center relative [&_.swiper-slide-thumb-active]:!border-orange-500 [&_.swiper-slide-thumb-active]:!rounded-none">
  <!-- Carousel media area -->
  <div data-gallery-target="thumbs" class="swiper h-full w-24">
    <div class="swiper-wrapper">
      <% media_items.each do |item| %>
        <div class="swiper-slide cursor-pointer border border-transparent rounded-lg">
          <%= media_tag_for(item) %>
        </div>
      <% end %>
    </div>
  </div>
  <div
    data-gallery-target="main"
    class="swiper w-full h-full">
    <div class="swiper-wrapper w-full h-full">
      <% media_items.each do |item| %>
        <div class="swiper-slide w-full h-full flex items-center justify-center">
          <%= media_tag_for(item) %>
        </div>
      <% end %>
    </div>
    <button type="button" class="btn btn-circle text-xl opacity-90 w-12 h-12 carousel-prev absolute top-1/2 left-4 z-10">❮</button>
    <button type="button" class="btn btn-circle text-xl opacity-90 w-12 h-12 carousel-next absolute top-1/2 right-4 z-10">❯</button>
    <!-- Pagination dots -->
    <div class="carousel-pagination absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2"></div>
  </div>
</div>

