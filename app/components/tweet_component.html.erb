<div class="tweet-card w-full bg-base-100 border border-base-300 rounded-2xl p-4 hover:bg-base-100/80 transition-colors">
  <%= link_to url, target: "_blank", rel: "noopener noreferrer", class: "block" do %>
    <!-- Header -->
    <div class="flex items-start gap-3 mb-3">
      <!-- Profile Image -->
      <div class="flex-shrink-0">
        <%= image_tag profile_image, alt: author_name, class: "w-12 h-12 rounded-full" %>
      </div>
      
      <!-- Author Info and Logo -->
      <div class="flex-grow flex items-start justify-between">
        <div>
          <div class="flex items-center gap-1">
            <span class="font-bold text-base-content"><%= author_name %></span>
            <% if verified %>
              <svg viewBox="0 0 24 24" aria-label="Verified account" class="w-5 h-5 fill-primary">
                <path d="M22.25 12c0-1.43-.88-2.67-2.19-3.34.46-1.39.2-2.9-.81-3.91s-2.52-1.27-3.91-.81c-.66-1.31-1.91-2.19-3.34-2.19s-2.67.88-3.33 2.19c-1.4-.46-2.91-.2-3.92.81s-1.26 2.52-.8 3.91c-1.31.67-2.2 1.91-2.2 3.34s.89 2.67 2.2 3.34c-.46 1.39-.21 2.9.8 3.91s2.52 1.26 3.92.81c.66 1.31 1.9 2.19 3.33 2.19s2.68-.88 3.34-2.19c1.39.45 2.9.2 3.91-.81s1.27-2.52.81-3.91c1.31-.67 2.19-1.91 2.19-3.34zm-11.71 4.2L6.8 12.46l1.41-1.42 2.26 2.26 4.8-5.23 1.47 1.36-6.2 6.77z"/>
              </svg>
            <% end %>
          </div>
          <div class="text-base-content/60">@<%= author_handle %></div>
        </div>
        <%= twitter_logo %>
      </div>
    </div>

    <!-- Content -->
    <div class="text-base-content mb-3 whitespace-pre-wrap"><%= formatted_tweet_text %></div>

    <!-- Media (if present) -->
    <% if media_urls.present? && media_urls.any? %>
      <% if media_urls.size == 1 %>
        <div class="rounded-xl overflow-hidden mb-3">
          <%= image_tag media_urls.first, class: "w-full", loading: "lazy" %>
        </div>
      <% else %>
        <div class="mb-3 grid grid-cols-2 gap-1">
          <% media_urls.each_with_index do |url, index| %>
            <div class="rounded-lg overflow-hidden <%= media_urls.size == 3 && index == 0 ? 'row-span-2' : '' %>">
              <%= image_tag url, class: "w-full h-full object-cover", loading: "lazy" %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>

    <!-- Footer -->
    <div class="pt-3">
      <!-- Date/Time row -->
      <div class="text-[#536471] text-[15px] pb-3 border-b border-[#eff3f4]">
        <%= formatted_time %>
      </div>
      
      <!-- Action buttons row -->
      <div class="flex items-center gap-5 py-3 border-b border-[#eff3f4]">
        <!-- Like -->
        <% if likes && likes > 0 %>
          <div class="flex items-center gap-1">
            <svg viewBox="0 0 24 24" class="w-[18px] h-[18px] fill-[#f91880]">
              <path d="M20.884 13.19c-1.351 2.48-4.001 5.12-8.379 7.67l-.503.3-.504-.3c-4.379-2.55-7.029-5.19-8.382-7.67-1.36-2.5-1.41-4.86-.514-6.67.887-1.79 2.647-2.91 4.601-3.01 1.651-.09 3.368.56 4.798 2.01 1.429-1.45 3.146-2.1 4.796-2.01 1.954.1 3.714 1.22 4.601 3.01.896 1.81.846 4.17-.514 6.67z"/>
            </svg>
            <span class="text-[#0f1419] text-[15px] font-bold"><%= number_with_delimiter(likes) %></span>
          </div>
        <% end %>
        
        <!-- Reply -->
        <button class="flex items-center gap-1 text-[#536471] hover:text-[#1d9bf0] transition-colors">
          <svg viewBox="0 0 24 24" class="w-[18px] h-[18px] fill-[#1d9bf0]">
            <path d="M1.751 10c0-4.42 3.584-8 8.005-8h4.366c4.49 0 8.129 3.64 8.129 8.13 0 2.96-1.607 5.68-4.196 7.11l-8.054 4.46v-3.69h-.067c-4.49.1-8.183-3.51-8.183-8.01zm8.005-6c-3.317 0-6.005 2.69-6.005 6 0 3.37 2.77 6.08 6.138 6.01l.351-.01h1.761v2.3l5.087-2.81c1.951-1.08 3.163-3.13 3.163-5.36 0-3.39-2.744-6.13-6.129-6.13H9.756z"/>
          </svg>
          <span class="text-[15px]">Reply</span>
        </button>
        
        <!-- Copy link -->
        <button class="flex items-center gap-1 text-[#536471] hover:text-[#1d9bf0] transition-colors">
          <svg viewBox="0 0 24 24" class="w-[18px] h-[18px] fill-current">
            <path d="M11.96 14.945c-.067 0-.136-.01-.203-.027-1.13-.318-2.097-.986-2.795-1.932-.832-1.125-1.176-2.508-.968-3.893s.942-2.605 2.068-3.438l3.53-2.608c2.322-1.716 5.61-1.224 7.33 1.1.83 1.127 1.175 2.51.967 3.895s-.943 2.605-2.07 3.438l-1.48 1.094c-.333.246-.804.175-1.05-.158-.246-.334-.176-.804.158-1.05l1.48-1.095c.803-.592 1.327-1.463 1.476-2.45.148-.988-.098-1.975-.69-2.778-1.225-1.656-3.572-2.01-5.23-.784l-3.53 2.608c-.802.593-1.326 1.464-1.475 2.45-.15.99.097 1.975.69 2.778.498.675 1.187 1.15 1.992 1.377.4.114.633.528.52.928-.092.33-.394.547-.722.547z"/>
            <path d="M7.27 22.054c-1.61 0-3.197-.735-4.225-2.125-.832-1.127-1.176-2.51-.968-3.894s.943-2.605 2.07-3.438l1.478-1.094c.334-.245.805-.175 1.05.158s.177.804-.157 1.05l-1.48 1.095c-.803.593-1.326 1.464-1.475 2.45-.15.99.097 1.975.69 2.778 1.225 1.657 3.57 2.01 5.23.785l3.528-2.608c1.658-1.225 2.01-3.57.785-5.23-.498-.674-1.187-1.15-1.992-1.376-.4-.113-.633-.527-.52-.927.112-.4.528-.63.926-.522 1.13.318 2.096.986 2.794 1.932 1.717 2.324 1.224 5.612-1.1 7.33l-3.53 2.608c-.933.693-2.023 1.026-3.105 1.026z"/>
          </svg>
          <span class="text-[15px]">Copy link</span>
        </button>
      </div>
    </div>
  <% end %>
</div>