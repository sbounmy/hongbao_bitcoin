<div class="relative">
  <%= radio_button_tag :variant_id, variant.id, selected, id: radio_id, class: "sr-only peer", onchange: "this.closest('form').requestSubmit();" %>

  <label for="<%= radio_id %>"
         class="w-full label !whitespace-normal text-left p-4 border rounded-lg transition-colors duration-150 ease-in-out
                hover:border-blue-500 focus-within:border-blue-500 focus-within:ring-2 focus-within:ring-blue-500 focus-within:outline-none
                peer-checked:border-blue-500 peer-checked:ring-2 peer-checked:ring-blue-500
                <%= selected ? 'border-blue-500 ring-2 ring-blue-500' : 'border-gray-300' %>">
    <div class="flex flex-col w-full">
      <div class="flex justify-between items-start w-full gap-2">
        <span class="block font-semibold text-base-content"><%= display_name %></span>
        <div class="flex items-center gap-2 shrink-0">
          <% if default %>
            <span class="bg-blue-500 text-white text-xs font-semibold px-2 py-1 rounded-full">
              Plus Populaire
            </span>
          <% end %>
          <span class="font-semibold text-base-content"><%= formatted_price %></span>
        </div>
      </div>
      <span class="block text-sm text-base-content/70"><%= formatted_description %></span>
      <span class="block text-xs text-base-content/70 mt-1"><%= formatted_price_per_envelope %> per envelope</span>
    </div>
  </label>
</div>
