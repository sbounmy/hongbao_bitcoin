<!-- app/components/v3/pricing_component.erb -->
<%= turbo_frame_tag "plan_options" do %>
  <div class="">
    <div class="md:flex w-full md:gap-4">
      <!-- Left Column: Product Display & Benefits -->
      <div class="md:flex-3 mb-8 md:mb-0">
        <div class="sticky top-8">
          <div class="sm:hidden block">
            <p class="text-sm font-semibold text-primary uppercase tracking-wider mb-1">FREE Credits included</p>
            <h1 class="text-3xl md:text-4xl font-bold text-base-content mb-2">Buy HongBao</h1>
            <p class="text-base-content/70 mb-8">Each pack contains 6 envelopes. Each envelope has a different quote. Exclusive to HongBao.</p>
          </div>
          <div class="aspect-w-1 aspect-h-1 mb-6">
            <%= render CarouselComponent.new(media_items: media_items) %>
          </div>
          <div class="hidden sm:block">
            <%=render V3::InclusionsComponent.new%>
          </div>
        </div>
      </div>

      <!-- Right Column: Configuration & Purchase -->
      <div class="md:flex-2">
        <div class="hidden sm:block">
          <p class="text-sm font-semibold text-primary uppercase tracking-wider mb-1">FREE Credits included</p>
          <h1 class="text-3xl md:text-4xl font-bold text-base-content mb-2">Buy HongBao</h1>
          <p class="text-base-content/70 mb-8">Each pack contains 6 envelopes. Each envelope has a different quote. Exclusive to HongBao.</p>
        </div>
  <!-- app/components/v3/plan_option_component.erb -->
          <%= form_tag helpers.request.path, method: :get, class: "block", data: { turbo_action: "advance" } do %>

            <div class="mb-8">
              <h2 class="text-xl font-semibold text-base-content mb-4">How many would you like?</h2>
              <div class="space-y-3">
                <% plans.each do |plan| %>
                  <%= plan %>
                <% end %>
              </div>
            </div>

            <div class="mb-4">
              <h2 class="text-xl font-semibold text-base-content mb-4">Choose your color(s)</h2>
              <% if selected_product %>
                <%= render V3::VariantSelectorComponent.new(product: selected_product, current_variant_id: selected_variant&.id) %>
              <% end %>
            </div>

          <% end %>

          <div class="space-y-2">
            <%= render Stripe::CheckoutButtonComponent.new(
              variant_id: selected_variant_id
            ) %>

            <%= render Btcpay::Btc::CheckoutButtonComponent.new(
              variant_id: selected_variant_id
            ) %>

            <%= render Btcpay::Lightning::CheckoutButtonComponent.new(
              variant_id: selected_variant_id
            ) %>
          </div>

          <!-- Compact Business CTA -->
          <div class="mt-6 text-center">
            <p class="text-sm text-base-content/70">Bitcoin Companies ?
              <%= link_to "See Custom envelopes â†’", bitcoin_companies_path, class: "font-medium text-primary hover:text-primary-focus", data: { turbo: false } %>
            </p>
          </div>

        <div class="block sm:hidden pt-3">
          <%=render V3::InclusionsComponent.new%>
        </div>
        <hr class="my-8">
        <div>
          <h3 class="text-sm font-semibold text-base-content mb-2">Get help with your purchase.</h3>
          <p class="text-sm text-base-content/70">
            <%= link_to "Chat now", "https://github.com/sbounmy/hongbao_bitcoin/discussions", class: "text-primary hover:underline" %> or email us at <a href="mailto:team@hongbaob.tc" class="text-primary hover:underline">team@hongbaob.tc</a>.
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>
