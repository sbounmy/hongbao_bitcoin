          <%= form_tag helpers.checkout_index_path, method: :post, data: { turbo: false }, class: "block" do %>
            <%= hidden_field_tag :price_id, stripe_price_id %>
            <button type="submit" class="w-full text-center p-4 border rounded-lg bg-blue-500 text-white transition-colors duration-150 ease-in-out relative">
              Buy now
            </button>
          <% end if stripe_price_id.present? %>
        <div class="block sm:hidden pt-3">
          <%=render V3::InclusionsComponent.new%>
        </div>
        <hr class="my-8">
        <div>
          <h3 class="text-sm font-semibold text-gray-700 mb-2">Get help with your purchase.</h3>
          <p class="text-sm text-gray-600">
