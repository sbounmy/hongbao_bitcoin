  <div class="overflow-hidden flex flex-col h-full transition-shadow duration-300">
    <% if default %>
      <div class="absolute top-3 right-3 bg-orange-500 text-white text-xs font-semibold px-2 py-1 rounded-full z-10">
        Most Popular
      </div>
    <% end %>
    <div class="p-6 flex flex-col flex-grow">
      <div class="aspect-w-16 aspect-h-9">
        <%= image_tag "index/red_front.jpg", class: "w-full h-full object-contain p-4" %>
      </div>
      <h3 class="text-xl font-semibold text-gray-900 mb-1"><%= name %></h3>
      <p class="text-sm text-gray-500 mb-3"><%= tokens %> ₿ao credits</p>
      <p class="text-2xl font-bold text-orange-600 mb-4"><%= number_to_currency(price, unit: "€", format: "%n%u", strip_insignificant_zeros: true) %></p>
      <p class="text-sm text-gray-700 mb-6 flex-grow"><%= description %></p>
      <div class="mt-auto space-y-3">
        <%= form_tag checkout_index_path, method: :post, data: { turbo: false } do %>
          <%= hidden_field_tag :price_id, stripe_price_id %>
          <button type="submit" class="btn btn-sm <%= default ? 'bg-accent hover:bg-accent/80 border-none' : 'btn-outline border-base-200 text-base-content hover:bg-base-500 hover:text-white' %>">
            Select
          </button>
        <% end %>
      </div>
    </div>
    <div class="px-6 py-4 border-t border-gray-200">
      <h4 class="text-xs font-semibold text-gray-500 uppercase mb-2">Includes:</h4>
      <ul class="text-sm text-gray-600 space-y-1">
        <li>✅ Free shipping included</li>
        <li>✅ Custom bill generator</li>
        <li>✅ 10 credits (1 credit = 1 bill)</li>
      </ul>
    </div>
  </div>