<!-- app/components/v3/plan_component.erb -->
<%# Component is expected to have access to: slug, name, tokens, formatted_price, selected? (method or boolean), default (boolean) %>
<% radio_id = "plan_radio_#{slug.to_s.parameterize}" %>

<div class="relative">
  <%= radio_button_tag :pack, slug, selected?, id: radio_id, class: "sr-only peer", onchange: "this.closest('form').requestSubmit();" %>

  <label for="<%= radio_id %>"
         class="w-full label !whitespace-normal text-left p-4 border rounded-lg transition-colors duration-150 ease-in-out
                hover:border-blue-500 focus-within:border-blue-500 focus-within:ring-2 focus-within:ring-blue-500 focus-within:outline-none
                peer-checked:border-blue-500 peer-checked:ring-2 peer-checked:ring-blue-500
                <%= selected? ? 'border-blue-500 ring-2 ring-blue-500' : 'border-gray-300' %>">
    <% if default %>
      <div class="absolute top-2 right-2 bg-blue-500 text-white text-xs font-semibold px-2 py-1 rounded-full z-10 pointer-events-none">
        Plus Populaire
      </div>
    <% end %>
    <div class="flex flex-col w-full">
      <div class="flex justify-between items-center w-full">
        <span class="block font-semibold text-gray-800"><%= name %></span>
        <span class="font-semibold text-gray-800"><%= formatted_price %></span>
      </div>
      <span class="block text-sm text-gray-600"><%= formatted_description %></span>
      <span class="block text-xs text-gray-500 mt-1"><%= formatted_price_per_envelope %> per envelope</span>
    </div>
  </label>
</div>