<div class="flex items-center gap-4 py-3">
  <%# Avatar %>
  <div class="flex-shrink-0">
    <%= link_to "#", class: "block w-12 h-12" do %>
      <% if avatar_url %>
        <%= image_tag avatar_url, class: "w-full h-full rounded-full object-cover" %>
      <% else %>
        <div class="w-full h-full bg-gray-700 rounded-full"></div>
      <% end %>
    <% end %>
  </div>

  <%# User Info %>
  <div class="flex-1 min-w-0">
    <div class="font-bold truncate"><%= user.name %></div>
    <div class="text-sm text-gray-400"><%= formatted_followers_count %> followers</div>
    <div class="text-sm text-gray-500">
      <span>@<%= handle %></span>
      <span class="font-semibold text-gray-400">Â· Suggested</span>
    </div>
  </div>

  <%# Follow Button %>
  <div class="flex-shrink-0 ml-auto">
    <%= link_to "#", class: "flex items-center gap-2 px-4 py-2 text-sm font-semibold rounded-full transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
      </svg>
      <span>Follow</span>
    <% end %>
  </div>
</div>