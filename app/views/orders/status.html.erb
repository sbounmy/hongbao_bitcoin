<div class="container mx-auto px-4 py-8">
  <div data-controller="content-loader"
       data-content-loader-url-value="<%= status_order_path(@order, content_only: true) %>"
       <% if @order.state.in?(%w[pending processing]) %>
         data-content-loader-refresh-interval-value="5000"
       <% end %>>
    <%= render Orders::StatusComponent.new(order: @order) %>
  </div>
</div>