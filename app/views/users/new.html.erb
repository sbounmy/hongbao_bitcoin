<div class="min-h-screen bg-[#FFE5E5] flex flex-col items-center justify-center p-4">
  <div class="w-full max-w-md bg-[#F04747] p-8 
              border-4 border-[#FFB636] outline outline-8 outline-[#F04747] 
              shadow-lg relative">
    
    <%# Logo and Title %>
    <div class="text-center mb-8">
      <%= image_tag "hongbao-bitcoin-logo-520.png", 
          class: "w-16 h-16 mx-auto mb-4 rounded-full border-2 border-[#FFB636]",
          alt: "Bitcoin Hong Bao Logo" %>
      <h1 class="text-2xl font-bold text-[#FFB636]">Create your account</h1>
    </div>

    <%= form_with(model: @user, class: "space-y-6") do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-500/10 text-red-400 p-4 rounded-lg">
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :email, class: "block text-sm font-medium text-[#FFB636]" %>
        <%= form.email_field :email_address, 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#FFB636] focus:ring focus:ring-[#FFB636] focus:ring-opacity-50",
            required: true %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium text-[#FFB636]" %>
        <%= form.password_field :password, 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#FFB636] focus:ring focus:ring-[#FFB636] focus:ring-opacity-50",
            required: true %>
      </div>

      <div>
        <%= form.label :password_confirmation, class: "block text-sm font-medium text-[#FFB636]" %>
        <%= form.password_field :password_confirmation, 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#FFB636] focus:ring focus:ring-[#FFB636] focus:ring-opacity-50",
            required: true %>
      </div>

      <div class="mt-6">
        <%= form.submit "Sign Up", class: "w-full bg-[#FFB636] text-white px-4 py-2 rounded-md hover:bg-[#FFB636] focus:outline-none focus:ring-2 focus:ring-[#FFB636] focus:ring-opacity-50" %>
      </div>
    <% end %>
  </div>
</div> 