<div class="min-h-screen flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
  <div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body">

      <%= turbo_frame_tag "signup_form" do %>

          <%= form_with(model: @user, url: signup_path, method: :get) do |form| %>
          <h2 class="card-title justify-center text-2xl font-bold">Sign up</h2>
            <div class="form-control">
              <%= form.email_field :email,
                  required: true,
                  class: "input input-bordered w-full",
                  placeholder: "Email address" %>
            </div>

            <%= form.submit "Continue", class: "btn btn-primary w-full" %>
          <% end if @user.new_record? && @user.email.blank? %>

          <%= form_with(model: @user, url: signup_path, method: :get) do |form| %>
            <h2 class="card-title justify-center text-2xl font-bold">Sign up</h2>
            <div class="form-control gap-2">
              <%= form.hidden_field :email,
                  class: "input input-bordered w-full",
                  placeholder: "Email address" %>

              <%= form.password_field :password,
                  required: true,
                  class: "input input-bordered w-full",
                  placeholder: "Password" %>
            </div>

            <%= form.submit "Continue", class: "btn btn-primary w-full" %>
          <% end if @user.new_record? && @user.email.present? %>


          <%= form_with(url: login_path) do |form| %>
            <h2 class="card-title justify-center text-2xl font-bold">Log in</h2>
            <div class="form-control gap-2">
              <%= form.hidden_field :email, value: @user.email,
                  class: "input input-bordered w-full",
                  placeholder: "Email address" %>

              <%= form.password_field :password,
                  required: true,
                  class: "input input-bordered w-full",
                  placeholder: "Password" %>
            </div>

            <%= form.submit "Continue", class: "btn btn-primary w-full" %>
          <% end if !@user.new_record? %>

          <div class="divider">OR</div>

          <button type="button" class="btn btn-outline w-full gap-2">
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="currentColor" d="M21.35,11.1H12.18V13.83H18.69C18.36,17.64 15.19,19.27 12.19,19.27C8.36,19.27 5,16.25 5,12C5,7.9 8.2,4.73 12.2,4.73C15.29,4.73 17.1,6.7 17.1,6.7L19,4.72C19,4.72 16.56,2 12.1,2C6.42,2 2.03,6.8 2.03,12C2.03,17.05 6.16,22 12.25,22C17.6,22 21.5,18.33 21.5,12.91C21.5,11.76 21.35,11.1 21.35,11.1V11.1Z"/>
            </svg>
            Sign up with Google
          </button>

          <div class="text-center space-y-2">
            <a href="#" class="link link-primary text-sm">Forgot password?</a>
            <div class="text-sm">
              Already have an account?
              <%= link_to "Log in", login_path, class: "link link-primary" %>
            </div>
          </div>

      <% end %>
    </div>
  </div>
</div>