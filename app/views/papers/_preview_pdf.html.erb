<div class="flex-1 flex flex-col bg-[#2a2a2e] overflow-hidden" data-controller="reveal">
    <!-- Zoom controls toolbar -->
    <div class="flex justify-between text-white items-center p-2 bg-[#38383d] border-b border-white/10">
      <div class="flex-1"></div>
      <div class="flex gap-1">
        <button data-action="pdf#zoomOut" class="hover:bg-[#737376] w-8 p-1 flex justify-center items-center cursor-pointer rounded-sm bg-[#4a4a4f]">-</button>
        <button data-action="pdf#resetZoom" data-pdf-target="zoomDisplay" class="w-16 text-sm font-thin hover:bg-[#737376] p-1 flex justify-center items-center cursor-pointer rounded-sm bg-[#4a4a4f]"></button>
        <button data-action="pdf#zoomIn" class="w-8 flex p-1 hover:bg-[#737376] justify-center items-center cursor-pointer rounded-sm bg-[#4a4a4f]">+</button>
      </div>
      <div class="flex-1 flex justify-end">
        <button data-action="reveal#toggle" class="hover:bg-[#737376] px-2 p-1 flex gap-1 justify-center items-center cursor-pointer rounded-sm bg-[#4a4a4f]">
          <%= heroicon "eye-slash", variant: :mini, class: "w-4 h-4" %>
          <span class="text-sm">Instructions</span>
        </button>
      </div>
    </div>

    <!-- Viewport for scrolling -->
    <div data-pdf-target="viewport"
         class="flex-1 bg-[#2a2a2e] overflow-auto p-4 w-full mx-auto mb-4"
         data-action="
           wheel->pdf#handleWheel
           touchstart->pdf#handleTouchStart
           touchmove->pdf#handleTouchMove
           touchend->pdf#handleTouchEnd
         ">
      <!-- Wrapper to handle scaled dimensions for scrolling -->
      <div data-pdf-target="wrapper" class="mx-auto">
        <!-- This is the actual content that will be rendered to PDF -->
        <div data-pdf-target='content' class="w-[210mm] h-[297mm] bg-white p-8 flex flex-col justify-between gap-2 shadow-lg origin-top-left">
          <!-- Main content of the page -->
          <div class="flex flex-col justify-between">
            <div class="flex items-center">
              <% frame = paper.theme&.frame_object || Frame.new %>
              <%= cuttable_content class: "flex #{frame.layout_direction} #{frame.layout_classes}" do %>
                <%= render 'hong_baos/new/steps/paper_canva',
                        class_name: "#{frame.css_classes} #{frame.rotation_back}",
                        frame: frame,
                        paper:,
                        elements: paper.back_elements,
                        image_base64: paper.image_back.attached? ? base64_url(paper.image_back) : ''
                %>

              <%# Fold Line %>
              <div class="<%= frame.fold_line %> border-white">
              </div>
              <%= render 'hong_baos/new/steps/paper_canva',
                        class_name: "#{frame.css_classes} #{frame.rotation_front}",
                        frame: frame,
                        paper:,
                        elements: paper.front_elements,
                        actions: "bitcoin:modeChanged@window->canva#refresh",
                        image_base64: paper.image_front.attached? ? base64_url(paper.image_front) : ''
              %>
            <% end %>
            <div class="relative w-8" data-reveal-target="item">
              <div class="flex justify-start -ml-[195px] transform-[rotate(-90deg)] text-black w-[154mm] py-2">
                <div class="space-y-1">
                  <div class="flex gap-2">
                    <h2 class="text-2xl font-bold">REMINDER</h2>
                    <span class="text-gray-600">(to be kept by the donor)</span>
                  </div>

                  <div class="space-y-2">
                    <p>
                      <span class="font-bold">1.</span> Cut out the Bitcoin paper wallet (left part) and fold it to create your gift.
                    </p>
                    <p>
                      <span class="font-bold">2.</span> After creating the paper wallet, you can put it in a Hongâ‚¿ao (Bitcoin red envelope) and give it to the recipient.
                    </p>
                    <p>
                      <span class="font-bold">Warning:</span> Never share the private key with anyone. Only the recipient should have access to it.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div data-reveal-target="item">
          <%= render 'hong_baos/pdf/footer', paper: %>
        </div>
      </div>
    </div>
  </div>
</div>