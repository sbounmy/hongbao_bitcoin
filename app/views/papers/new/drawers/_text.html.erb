<%# Text Drawer - Edit text element properties %>
<div class="flex flex-col gap-4">
  <%# Text Content %>
  <div class="form-control">
    <label class="label">
      <span class="label-text font-medium">Text</span>
    </label>
    <textarea class="textarea textarea-bordered h-24"
              data-editor--text-target="text"
              data-action="input->editor--text#updateText"
              placeholder="Enter your text..."></textarea>
  </div>

  <%# Font Size %>
  <div class="form-control">
    <label class="label">
      <span class="label-text font-medium">Size</span>
      <span class="label-text-alt" data-editor--text-target="sizeLabel">3%</span>
    </label>
    <input type="range"
           min="0.5"
           max="10"
           step="0.5"
           value="3"
           class="range range-primary range-sm"
           data-editor--text-target="size"
           data-action="input->editor--text#updateSize" />
  </div>

  <%# Font Color %>
  <div class="form-control">
    <label class="label">
      <span class="label-text font-medium">Color</span>
    </label>
    <div class="flex gap-2 flex-wrap">
      <% %w[#000000 #FFFFFF #EF4444 #F59E0B #22C55E #3B82F6 #8B5CF6 #EC4899].each do |color| %>
        <button type="button"
                class="w-8 h-8 rounded-full border-2 border-base-300 hover:border-primary transition-colors"
                style="background-color: <%= color %>"
                data-action="click->editor--text#selectColor"
                data-color="<%= color %>"></button>
      <% end %>
      <input type="color"
             class="w-8 h-8 rounded-full cursor-pointer"
             data-editor--text-target="colorPicker"
             data-action="input->editor--text#updateColor" />
    </div>
  </div>

  <%# Delete Button (only for custom items) %>
  <div class="pt-4 border-t border-base-300">
    <button type="button"
            class="btn btn-error btn-outline btn-sm w-full"
            data-editor--text-target="deleteBtn"
            data-action="click->editor--text#delete">
      <%= heroicon "trash", variant: :mini, class: "w-4 h-4" %>
      Delete Element
    </button>
  </div>
</div>
