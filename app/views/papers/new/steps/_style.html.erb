<%# Step 2: Style Selection %>

<%# Header with photo preview and back button %>
<div class="flex items-center gap-3 p-4 border-b border-base-300 bg-base-100 sticky top-14 z-10">
  <%# Back button %>
  <button type="button"
          class="p-2 -ml-2 text-base-content hover:text-base-content/70 transition-colors"
          data-action="steps#previous">
    <%= heroicon "arrow-left", class: "w-5 h-5" %>
  </button>

  <%# Photo thumbnail %>
  <div class="w-12 h-12 rounded-lg overflow-hidden bg-base-200 flex-shrink-0">
    <%= image_tag "",
        data: { preview_target: "previewThumb", photo_select_target: "previewThumb" },
        class: "w-full h-full object-cover",
        alt: "Selected photo" %>
  </div>

  <div class="flex-1 min-w-0">
    <p class="text-sm font-medium text-base-content truncate">Your Photo</p>
    <button type="button"
            class="text-xs text-primary hover:underline"
            data-action="steps#previous">
      Change photo
    </button>
  </div>
</div>

<%# Style Grid - Scrollable %>
<div class="flex-1 overflow-y-auto p-4">
  <h2 class="text-base font-semibold text-base-content mb-4">Choose a Style</h2>
  <div class="grid grid-cols-2 gap-3">
    <%= render Styles::RadioComponent.with_collection(styles, form:) %>
  </div>
</div>

<%# Generate Button - Fixed at bottom %>
<div class="p-4 border-t border-base-300 bg-base-100 sticky bottom-0">
  <%= render Papers::CreateButtonComponent.new(form:) %>
</div>
