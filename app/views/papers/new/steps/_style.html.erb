<%# Step 2: Style Selection with Tabs %>

<div data-controller="tabs"
     data-tabs-default-tab-value="styles"
     data-tabs-active-class="border-b-2 border-primary text-primary"
     class="flex flex-col flex-1 overflow-hidden">

  <%# Tab buttons %>
  <div class="flex border-b border-base-300 flex-shrink-0 px-4">
    <button type="button"
            data-tabs-target="btn"
            data-tab-id="styles"
            data-action="tabs#select"
            class="flex-1 py-3 text-sm font-medium text-base-content/60 transition-colors">
      Styles
    </button>
    <button type="button"
            data-tabs-target="btn"
            data-tab-id="customize"
            data-action="tabs#select"
            class="flex-1 py-3 text-sm font-medium text-base-content/60 transition-colors">
      Customize
    </button>
  </div>

  <%# Styles Tab: Horizontal scroll portrait cards %>
  <div data-tabs-target="tab" data-tab-id="styles" class="flex-1 flex flex-col overflow-hidden">
    <div class="flex-1 relative">
      <div class="absolute inset-0 overflow-x-auto p-4">
        <div class="flex gap-4 h-full items-center">
        <% styles.each_with_index do |style, index| %>
          <label class="flex-shrink-0 w-40 cursor-pointer group">
            <%= form.fields_for :input_item_style_attributes do |style_form| %>
              <%= style_form.radio_button :input_id, style.id, {
                  checked: form.object.input_item_style&.input_id == style.id || index == 0,
                  class: "peer sr-only"
              } %>
            <% end %>

            <div class="relative rounded-xl border-2 border-base-300 overflow-hidden transition-all
                        peer-checked:border-primary peer-checked:ring-2 peer-checked:ring-primary
                        group-hover:border-primary/50">
              <%# Portrait image container %>
              <div class="aspect-[3/5] bg-base-200">
                <% if style.image.attached? %>
                  <%= image_tag style.image, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center text-base-content/30">
                    <%= heroicon "photo", class: "w-8 h-8" %>
                  </div>
                <% end %>
              </div>

              <%# FREE badge %>
              <% if style.prompt.blank? %>
                <span class="absolute top-2 right-2 badge badge-success badge-xs font-bold">FREE</span>
              <% end %>

              <%# Check indicator %>
              <div class="absolute bottom-2 right-2 w-5 h-5 rounded-full bg-primary text-primary-content
                          flex items-center justify-center opacity-0 peer-checked:opacity-100 transition-opacity">
                <%= heroicon "check", variant: :mini, class: "w-3 h-3" %>
              </div>
            </div>

            <%# Style name %>
            <p class="mt-2 text-xs font-medium text-center text-base-content/70 peer-checked:text-primary transition-colors">
              <%= style.name %>
            </p>
          </label>
        <% end %>
        </div>
      </div>
    </div>

    <%# Generate Button %>
    <div class="p-4 border-t border-base-300 bg-base-100 flex-shrink-0">
      <%= render Papers::CreateButtonComponent.new(form:) %>
    </div>
  </div>

  <%# Customize Tab: Future prompt/options %>
  <div data-tabs-target="tab" data-tab-id="customize" class="hidden flex-1 flex flex-col overflow-hidden">
    <div class="flex-1 p-4 overflow-y-auto">
      <%# Predefined options chips (placeholder) %>
      <div class="mb-4">
        <p class="text-sm font-medium text-base-content mb-2">Quick options</p>
        <div class="flex flex-wrap gap-2">
          <button type="button" class="btn btn-sm btn-outline">Bitcoin hat</button>
          <button type="button" class="btn btn-sm btn-outline">Sunset background</button>
          <button type="button" class="btn btn-sm btn-outline">Forest</button>
        </div>
      </div>

      <%# Custom prompt textarea %>
      <div>
        <p class="text-sm font-medium text-base-content mb-2">Custom prompt</p>
        <%= form.text_area :custom_prompt,
            placeholder: "Add custom details for your style...",
            rows: 4,
            class: "textarea textarea-bordered w-full text-sm" %>
      </div>
    </div>

    <%# Generate Button %>
    <div class="p-4 border-t border-base-300 bg-base-100 flex-shrink-0">
      <%= render Papers::CreateButtonComponent.new(form:) %>
    </div>
  </div>
</div>
