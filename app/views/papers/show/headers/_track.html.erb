<%# Step 5 Header: ← | Badge + Title | Zoom + Done (single line) %>
<div class="<%= 'hidden' unless current_step == 5 %> flex items-center justify-between"
     data-steps-target="content"
     data-steps-index="5">
  <button type="button"
          class="p-1 text-base-content hover:text-base-content/70 transition-colors"
          data-action="steps#previous">
    <%= heroicon "arrow-left", class: "w-5 h-5" %>
  </button>

  <div class="flex items-center gap-2">
    <%= render "papers/show/headers/network_badge", network: network %>
    <span class="font-semibold text-base-content text-sm">Track</span>
  </div>

  <div class="flex items-center gap-1">
    <button data-action="reveal#toggle" class="p-1 text-base-content/60 hover:text-base-content transition-colors" title="Toggle instructions">
      <%= heroicon "document-text", variant: :mini, class: "w-4 h-4" %>
    </button>
    <button data-action="pdf#zoomOut" class="p-1 text-base-content/60 hover:text-base-content transition-colors">
      <%= heroicon "minus-circle", variant: :mini, class: "w-4 h-4" %>
    </button>
    <span data-pdf-target="zoomDisplay" class="text-xs w-8 text-center text-base-content/60"></span>
    <button data-action="pdf#zoomIn" class="p-1 text-base-content/60 hover:text-base-content transition-colors">
      <%= heroicon "plus-circle", variant: :mini, class: "w-4 h-4" %>
    </button>
    <%= link_to dashboard_path, class: "font-semibold text-primary text-sm ml-2" do %>
      Done ✓
    <% end %>
  </div>
</div>
