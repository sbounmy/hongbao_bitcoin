<%# Step 1: Review Keys - Show mnemonic/private key/address %>
<div class="<%= 'hidden' unless local_assigns[:current_step] == 1 %> flex flex-col gap-2"
     data-controller="binding"
     data-action="bitcoin:changed@window->binding#attribute"
     data-steps-target="content"
     data-steps-index="1">

  <%# Mnemonic - compact inline layout like others %>
  <div class="flex items-start gap-2 px-2 py-1.5 bg-base-200/50 rounded" data-controller="clipboard">
    <span class="text-xs text-base-content/60 shrink-0 w-20 pt-1">Mnemonic</span>
    <textarea name="mnemonic_text"
              id="mnemonic_text"
              rows="3"
              class="flex-1 bg-transparent text-base-content font-mono text-xs min-w-0 outline-none resize-none"
              data-clipboard-target="source"
              data-controller="binding textarea-autogrow"
              data-binding-name-value="mnemonicText"
              data-action="bitcoin:changed@window->binding#value input->bitcoin#mnemonicChanged binding:changed->textarea-autogrow#autogrow"></textarea>
    <div class="flex flex-col gap-1 shrink-0">
      <button type="button" data-action="bitcoin#generateNewKeys" class="text-warning p-1 hover:text-warning/70 transition-colors">
        <%= heroicon "arrow-path", class: "w-4 h-4" %>
      </button>
      <button type="button" data-action="clipboard#copy" class="text-warning p-1 hover:text-warning/70 transition-colors">
        <%= heroicon "clipboard", class: "w-4 h-4" %>
      </button>
    </div>
  </div>

  <%# Private Key - compact inline layout %>
  <div class="flex items-center gap-2 px-2 py-1.5 bg-base-200/50 rounded" data-controller="clipboard">
    <span class="text-xs text-base-content/60 shrink-0 w-20">Private Key</span>
    <input type="text"
           name="private_key_text"
           id="private_key_text"
           class="flex-1 bg-transparent text-base-content font-mono text-xs truncate min-w-0 outline-none"
           readonly
           data-clipboard-target="source"
           data-controller="binding"
           data-binding-name-value="privateKeyText"
           data-action="bitcoin:changed@window->binding#value input->bitcoin#privateKeyChanged" />
    <button type="button" data-action="clipboard#copy" class="text-warning shrink-0 p-1 hover:text-warning/70 transition-colors">
      <%= heroicon "clipboard", class: "w-4 h-4" %>
    </button>
  </div>

  <%# Public Address - compact inline layout %>
  <div class="flex items-center gap-2 px-2 py-1.5 bg-base-200/50 rounded" data-controller="clipboard">
    <span class="text-xs text-base-content/60 shrink-0 w-20">Address</span>
    <input type="text"
           name="public_address_text"
           id="public_address_text"
           class="flex-1 bg-transparent text-base-content font-mono text-xs truncate min-w-0 outline-none"
           readonly
           data-clipboard-target="source"
           data-controller="binding"
           data-binding-name-value="publicAddressText"
           data-action="bitcoin:changed@window->binding#value input->bitcoin#publicAddressChanged" />
    <button type="button" data-action="clipboard#copy" class="text-warning shrink-0 p-1 hover:text-warning/70 transition-colors">
      <%= heroicon "clipboard", class: "w-4 h-4" %>
    </button>
  </div>

  <%# Import keys link %>
  <div class="text-center pt-1">
    <button type="button"
            class="text-xs text-base-content/50 hover:text-base-content/80 underline underline-offset-2"
            data-action="bitcoin#useCustomKeys">
      <%= heroicon "key", class: "w-3 h-3 inline -mt-0.5" %>
      Use my own keys
    </button>
  </div>
</div>
