<%# Step 1: Review Keys - Show mnemonic/private key/address %>
<div class="<%= 'hidden' unless local_assigns[:current_step] == 1 %> flex flex-col gap-2"
     data-controller="binding keys-input"
     data-action="bitcoin:changed@window->binding#attribute keys-input:generate->bitcoin#generateNewKeys"
     data-steps-target="content"
     data-steps-index="1">

  <%# Mode toggle - Generated vs Custom %>
  <div class="flex justify-center gap-4 mb-2">
    <label class="flex items-center gap-2 cursor-pointer">
      <input type="radio" name="key_mode" value="generated"
             class="radio radio-warning radio-sm"
             data-action="change->keys-input#setMode"
             checked>
      <span class="text-sm text-base-content">Generate keys</span>
    </label>
    <label class="flex items-center gap-2 cursor-pointer">
      <input type="radio" name="key_mode" value="custom"
             class="radio radio-warning radio-sm"
             data-action="change->keys-input#setMode">
      <span class="text-sm text-base-content">Use my own keys</span>
    </label>
  </div>

  <%# Mnemonic - compact inline layout like others %>
  <div class="flex items-start gap-2 px-2 py-1.5 bg-base-200/50 rounded" data-controller="clipboard">
    <span class="text-xs text-base-content/60 shrink-0 w-20 pt-1">Mnemonic</span>
    <textarea name="mnemonic_text"
              id="mnemonic_text"
              rows="3"
              readonly
              class="flex-1 bg-transparent text-base-content font-mono text-xs min-w-0 outline-none resize-none"
              data-clipboard-target="source"
              data-keys-input-target="input"
              data-controller="binding textarea-autogrow"
              data-binding-name-value="mnemonic_text"
              data-action="bitcoin:changed@window->binding#value input->bitcoin#mnemonicChanged input->keys-input#cacheInput binding:changed->textarea-autogrow#autogrow"></textarea>
    <div class="flex flex-col gap-1 shrink-0">
      <button type="button"
              data-action="bitcoin#generateNewKeys"
              data-keys-input-target="regenerate"
              class="text-warning p-1 hover:text-warning/70 transition-colors">
        <%= heroicon "arrow-path", class: "w-4 h-4" %>
      </button>
      <button type="button" data-action="clipboard#copy" class="text-warning p-1 hover:text-warning/70 transition-colors">
        <%= heroicon "clipboard", class: "w-4 h-4" %>
      </button>
    </div>
  </div>

  <%# Private Key - compact inline layout %>
  <div class="flex items-center gap-2 px-2 py-1.5 bg-base-200/50 rounded" data-controller="clipboard">
    <span class="text-xs text-base-content/60 shrink-0 w-20">Private Key</span>
    <input type="text"
           name="private_key_text"
           id="private_key_text"
           class="flex-1 bg-transparent text-base-content font-mono text-xs truncate min-w-0 outline-none"
           readonly
           data-clipboard-target="source"
           data-keys-input-target="input"
           data-controller="binding"
           data-binding-name-value="private_key_text"
           data-action="bitcoin:changed@window->binding#value input->bitcoin#privateKeyChanged input->keys-input#cacheInput" />
    <button type="button" data-action="clipboard#copy" class="text-warning shrink-0 p-1 hover:text-warning/70 transition-colors">
      <%= heroicon "clipboard", class: "w-4 h-4" %>
    </button>
  </div>

  <%# Public Address - compact inline layout %>
  <div class="flex items-center gap-2 px-2 py-1.5 bg-base-200/50 rounded" data-controller="clipboard">
    <span class="text-xs text-base-content/60 shrink-0 w-20">Address</span>
    <input type="text"
           name="public_address_text"
           id="public_address_text"
           class="flex-1 bg-transparent text-base-content font-mono text-xs truncate min-w-0 outline-none"
           readonly
           data-clipboard-target="source"
           data-keys-input-target="input"
           data-controller="binding"
           data-binding-name-value="public_address_text"
           data-action="bitcoin:changed@window->binding#value input->bitcoin#publicAddressChanged input->keys-input#cacheInput" />
    <button type="button" data-action="clipboard#copy" class="text-warning shrink-0 p-1 hover:text-warning/70 transition-colors">
      <%= heroicon "clipboard", class: "w-4 h-4" %>
    </button>
  </div>
</div>
