<%# Screen 1 Header: Canvas - Offline Mode %>
<div class="<%= 'hidden' unless current_step == 1 %> flex items-center justify-between"
     data-steps-target="content"
     data-steps-index="1">
  <%= link_to root_path, class: "p-1 text-base-content hover:text-base-content/70 transition-colors" do %>
    <%= heroicon "arrow-left", class: "w-5 h-5" %>
  <% end %>

  <div class="flex items-center gap-2">
    <%= render "papers/show/headers/network_badge", network: network %>
    <span class="font-semibold text-base-content text-sm">Create Hongâ‚¿ao</span>
  </div>

  <%# Add Element Button %>
  <%= render BottomSheetComponent.new(id: "new-item-drawer") do |sheet| %>
    <% sheet.with_trigger do %>
      <button type="button" class="btn btn-ghost btn-sm btn-square">
        <%= heroicon "plus", variant: :mini, class: "w-5 h-5" %>
      </button>
    <% end %>
    <% sheet.with_footer(title: "Add Element") %>
    <div class="p-4">
      <%= render "papers/new2/drawers/new_item" %>
    </div>
  <% end %>
</div>
