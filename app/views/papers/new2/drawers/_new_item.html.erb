<%# New Item Drawer - Select element type %>
<div data-controller="new-canva-item" class="grid grid-cols-3 gap-4">
  <%# Text Element %>
  <form method="dialog">
    <button type="submit"
            class="flex flex-col items-center gap-2 p-4 rounded-lg border-2 border-base-300
                   hover:border-primary hover:bg-base-200 transition-all w-full"
            data-action="click->new-canva-item#createText">
      <%= heroicon "document-text", class: "w-8 h-8 text-base-content/70" %>
      <span class="text-sm font-medium">Text</span>
    </button>
  </form>

  <%# Future: Image Element (disabled) %>
  <button disabled class="flex flex-col items-center gap-2 p-4 rounded-lg border-2
                          border-base-300 opacity-50 cursor-not-allowed w-full">
    <%= heroicon "photo", class: "w-8 h-8 text-base-content/70" %>
    <span class="text-sm font-medium">Image</span>
    <span class="text-xs text-base-content/50">Soon</span>
  </button>

  <%# Future: QR Code Element (disabled) %>
  <button disabled class="flex flex-col items-center gap-2 p-4 rounded-lg border-2
                          border-base-300 opacity-50 cursor-not-allowed w-full">
    <%= heroicon "qr-code", class: "w-8 h-8 text-base-content/70" %>
    <span class="text-sm font-medium">QR Code</span>
    <span class="text-xs text-base-content/50">Soon</span>
  </button>
</div>
