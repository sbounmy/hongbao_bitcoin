    <div class="w-[380px] md:w-[580px] lg:w-[620px] z-0 mb-[-48px] md:mb-[-160px] lg:mb-[-180px]">
    <div class="relative">
      <!-- Container for front and back -->
      <div class="relative flex items-end justify-center gap-0 m-0">
        <!-- Front Face (left side) -->
        <div class="relative w-[42%] transform translate-x-[6%] z-10">
          <%= image_tag image_url("index/red_front.jpg"), class: "w-full brightness-100 rounded shadow-uplift" %>
        </div>

        <!-- Back Face with Bill (right side) -->
        <div class="relative w-[42%] transform -translate-x-[5%]">
          <!-- Back envelope -->
          <div class="absolute -top-[33.2%]">
            <%= image_tag image_url("index/red_back_back.png"), class: "w-full" %>
          </div>
          <!-- Bill sticking out from top of envelope -->
          <div class="absolute -left-[30%] w-[160%] z-20 rotate-[90deg] hover:translate-y-[-64px] transition-all duration-300">
            <%= link_to explore_papers_path, class: "w-full rounded-t shadow-lg" do %>
              <%= image_tag "bill_hongbao.jpg" %>
            <% end %>
          </div>
          <!-- Back envelope -->
          <div class="relative z-30">
            <%= image_tag image_url("index/red_back_front.png"), class: "w-full brightness-100 rounded shadow-xl" %>
          </div>
        </div>
