<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
      <h1 class="text-xl font-semibold text-gray-900">Hongbao</h1>
    </div>
  </header>

  <!-- Hero -->
  <div class="bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
          <span class="block">Be your own </span>
          <span class="block text-indigo-600">â‚¿ank</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Print your own custom bank note. Choose your style, upload your picture, and create your personalized currency.
        </p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%= form_with(model: Ai::ImageGpt.new, class: "grid grid-cols-1 gap-y-8 gap-x-6 md:grid-cols-3", data: { turbo_frame: "paper_form" }) do |form| %>
      <!-- Column 1: Styles -->
      <div>
        <h2 class="text-lg font-medium text-gray-900 mb-4">Choose Style</h2>
        <div class="grid grid-cols-2 gap-4">
          <% @styles.each do |style| %>
            <%= render Ai::Styles::CheckboxComponent.new(style: style, form: form) %>
          <% end %>
        </div>
      </div>

      <!-- Column 2: Upload -->
      <div>
        <h2 class="text-lg font-medium text-gray-900 mb-4">Upload Picture</h2>
        <%= render PictureUploadComponent.new(form: form) %>
      </div>

      <!-- Column 3: Preview -->
      <div>
        <h2 class="text-lg font-medium text-gray-900 mb-4">Preview</h2>
        <div class="space-y-4">
          <% @papers.each do |paper| %>
            <div class="relative rounded-lg overflow-hidden shadow-lg">
              <%= image_tag paper.image_front, class: "w-full h-auto" if paper.image_front.attached? %>
              <div class="absolute bottom-0 left-0 right-0 bg-white bg-opacity-90 p-4">
                <div class="flex justify-between items-center">
                  <div class="space-x-2">
                    <%= button_tag type: "button", class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                      <%= heroicon "share", class: "h-4 w-4 mr-1" %>
                      Share
                    <% end %>

                    <%= link_to "#", class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                      <%= heroicon "printer", class: "h-4 w-4 mr-1" %>
                      Print
                    <% end %>

                    <%= button_tag type: "button", class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                      <%= heroicon "arrow-down-tray", class: "h-4 w-4 mr-1" %>
                      Save
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>