<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
      <h1 class="text-xl font-semibold text-gray-900">Hongbao</h1>
    </div>
  </header>

  <!-- Hero -->
  <div class="bg-white">
    <div class="max-w-4xl py-8 px-4 sm:py-12 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
          <span class="block">Be your own </span>
          <span class="block text-indigo-600">â‚¿ank</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-4">
          Print your own custom bank note. Choose your style, upload your picture, and create your personalized currency.
        </p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%= form_with(model: Ai::ImageGpt.new, class: "grid grid-cols-1 gap-y-8 gap-x-6 md:grid-cols-3", data: { turbo_frame: "paper_form" }) do |form| %>
      <!-- Column 1: Styles -->
      <div class="relative">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Choose Style</h2>
        <div class="grid grid-cols-2 gap-4">
          <% @styles.each do |style| %>
            <%= render Ai::Styles::CheckboxComponent.new(style: style, form: form) %>
          <% end %>
        </div>
      </div>

      <!-- Column 2: Upload -->
      <div class="relative">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Upload Picture</h2>
        <%= render PictureUploadComponent.new(form: form) %>
      </div>

      <!-- Column 3: Preview -->
      <div class="relative -mt-64 lg:-mt-96 z-10">
        <div class="bg-white rounded-xl shadow-xl p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Preview</h2>
          <div class="space-y-4 max-h-[calc(100vh-12rem)] overflow-y-auto">
            <%= render Papers::ItemComponent.with_collection(@papers) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>