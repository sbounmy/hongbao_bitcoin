<!-- Envelope Quotes Section -->
<section class="py-16 md:py-24 bg-gradient-to-br from-base-200 via-base-100 to-base-200">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-12 items-center" data-controller="tabs" data-tabs-default-tab-value="satoshi" data-tabs-active-class="ring-4 ring-primary">

      <!-- Left: Preview Cards -->
      <div class="relative">
        <!-- Satoshi Quote -->
        <div data-tabs-target="tab" data-tab-id="satoshi">
          <div class="bg-gradient-to-br from-orange-400 to-red-400 rounded-3xl p-1">
            <div class="bg-base-100 rounded-3xl p-8 md:p-12">
              <div class="aspect-[3/4] flex items-center justify-center text-center">
                <div class="space-y-4">
                  <p class="text-2xl md:text-3xl font-serif italic text-base-content">
                    "A purely peer-to-peer version of electronic cash would allow online payments to be sent directly from one party to another without going through a financial institution."
                  </p>
                  <p class="text-lg text-base-content/70">— Satoshi Nakamoto</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Hal Finney Quote -->
        <div data-tabs-target="tab" data-tab-id="hal" class="hidden">
          <div class="bg-gradient-to-br from-blue-400 to-purple-400 rounded-3xl p-1">
            <div class="bg-base-100 rounded-3xl p-8 md:p-12">
              <div class="aspect-[3/4] flex items-center justify-center text-center">
                <div class="space-y-4">
                  <p class="text-2xl md:text-3xl font-serif italic text-base-content">
                    "Bitcoin itself is the real innovation. It's a new form of currency that is completely decentralized."
                  </p>
                  <p class="text-lg text-base-content/70">— Hal Finney</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Andreas Quote -->
        <div data-tabs-target="tab" data-tab-id="andreas" class="hidden">
          <div class="bg-gradient-to-br from-green-400 to-teal-400 rounded-3xl p-1">
            <div class="bg-base-100 rounded-3xl p-8 md:p-12">
              <div class="aspect-[3/4] flex items-center justify-center text-center">
                <div class="space-y-4">
                  <p class="text-2xl md:text-3xl font-serif italic text-base-content">
                    "Bitcoin is not just digital money. It's the internet of money, and currency is just the first application."
                  </p>
                  <p class="text-lg text-base-content/70">— Andreas Antonopoulos</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Naval Quote -->
        <div data-tabs-target="tab" data-tab-id="naval" class="hidden">
          <div class="bg-gradient-to-br from-pink-400 to-rose-400 rounded-3xl p-1">
            <div class="bg-base-100 rounded-3xl p-8 md:p-12">
              <div class="aspect-[3/4] flex items-center justify-center text-center">
                <div class="space-y-4">
                  <p class="text-2xl md:text-3xl font-serif italic text-base-content">
                    "Bitcoin is a way to store value across time and space without trusting anyone."
                  </p>
                  <p class="text-lg text-base-content/70">— Naval Ravikant</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Wisdom Quote -->
        <div data-tabs-target="tab" data-tab-id="wisdom" class="hidden">
          <div class="bg-gradient-to-br from-gray-600 to-gray-800 rounded-3xl p-1">
            <div class="bg-base-100 rounded-3xl p-8 md:p-12">
              <div class="aspect-[3/4] flex items-center justify-center text-center">
                <div class="space-y-4">
                  <p class="text-2xl md:text-3xl font-serif italic text-base-content">
                    "The best time to plant a tree was 20 years ago. The second best time is now."
                  </p>
                  <p class="text-lg text-base-content/70">— Chinese Proverb</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Freedom Quote -->
        <div data-tabs-target="tab" data-tab-id="freedom" class="hidden">
          <div class="bg-gradient-to-br from-yellow-400 to-orange-400 rounded-3xl p-1">
            <div class="bg-base-100 rounded-3xl p-8 md:p-12">
              <div class="aspect-[3/4] flex items-center justify-center text-center">
                <div class="space-y-4">
                  <p class="text-2xl md:text-3xl font-serif italic text-base-content">
                    "Financial sovereignty starts with understanding that money is a tool for freedom, not control."
                  </p>
                  <p class="text-lg text-base-content/70">— Hong₿ao</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Custom Quote -->
        <div data-tabs-target="tab" data-tab-id="custom" class="hidden">
          <div class="bg-gradient-to-br from-purple-400 to-indigo-400 rounded-3xl p-1">
            <div class="bg-base-100 rounded-3xl p-8 md:p-12">
              <div class="aspect-[3/4] flex items-center justify-center text-center">
                <div class="space-y-4">
                  <p class="text-2xl md:text-3xl font-serif italic text-base-content">
                    "Your personalized message goes here..."
                  </p>
                  <p class="text-lg text-base-content/70">— Your Name</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Blank Quote -->
        <div data-tabs-target="tab" data-tab-id="blank" class="hidden">
          <div class="bg-gradient-to-br from-gray-300 to-gray-400 rounded-3xl p-1">
            <div class="bg-base-100 rounded-3xl p-8 md:p-12">
              <div class="aspect-[3/4] flex items-center justify-center text-center">
                <p class="text-2xl md:text-3xl text-base-content/40">
                  [Blank envelope - no quote]
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Background decoration -->
        <div class="absolute -inset-4 bg-gradient-to-r from-orange-400 to-red-400 rounded-3xl blur-3xl opacity-20 -z-10"></div>
      </div>

      <!-- Right: Content & Thumbnails -->
      <div class="space-y-8">
        <div>
          <p class="text-sm font-medium uppercase tracking-wider text-primary mb-3">ENVELOPE BACKS</p>
          <h2 class="text-3xl md:text-5xl font-extrabold text-base-content mb-4">
            8 pieces of wisdom that can change a life
          </h2>
          <p class="text-lg text-base-content/70">
            Each envelope features a carefully selected Bitcoin quote from OGs. Perfect for sparking rabbit-hole.
          </p>
        </div>

        <!-- Quote Thumbnails Grid -->
        <div>
          <p class="text-sm text-base-content/60 mb-4">Choose a quote style:</p>
          <div class="grid grid-cols-3 md:grid-cols-4 gap-3">
            <button data-tabs-target="btn" data-tab-id="satoshi" data-action="click->tabs#select"
                    class="group relative aspect-square rounded-xl overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl">
              <div class="absolute inset-0 bg-gradient-to-br from-orange-400 to-red-400"></div>
              <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <p class="text-white font-medium text-sm">Satoshi</p>
              </div>
            </button>

            <button data-tabs-target="btn" data-tab-id="hal" data-action="click->tabs#select"
                    class="group relative aspect-square rounded-xl overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl">
              <div class="absolute inset-0 bg-gradient-to-br from-blue-400 to-purple-400"></div>
              <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <p class="text-white font-medium text-sm">Hal Finney</p>
              </div>
            </button>

            <button data-tabs-target="btn" data-tab-id="andreas" data-action="click->tabs#select"
                    class="group relative aspect-square rounded-xl overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl">
              <div class="absolute inset-0 bg-gradient-to-br from-green-400 to-teal-400"></div>
              <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <p class="text-white font-medium text-sm">Andreas</p>
              </div>
            </button>

            <button data-tabs-target="btn" data-tab-id="naval" data-action="click->tabs#select"
                    class="group relative aspect-square rounded-xl overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl">
              <div class="absolute inset-0 bg-gradient-to-br from-pink-400 to-rose-400"></div>
              <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <p class="text-white font-medium text-sm">Naval</p>
              </div>
            </button>

            <button data-tabs-target="btn" data-tab-id="wisdom" data-action="click->tabs#select"
                    class="group relative aspect-square rounded-xl overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl">
              <div class="absolute inset-0 bg-gradient-to-br from-gray-600 to-gray-800"></div>
              <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <p class="text-white font-medium text-sm">Wisdom</p>
              </div>
            </button>

            <button data-tabs-target="btn" data-tab-id="freedom" data-action="click->tabs#select"
                    class="group relative aspect-square rounded-xl overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl">
              <div class="absolute inset-0 bg-gradient-to-br from-yellow-400 to-orange-400"></div>
              <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <p class="text-white font-medium text-sm">Freedom</p>
              </div>
            </button>

            <button data-tabs-target="btn" data-tab-id="custom" data-action="click->tabs#select"
                    class="group relative aspect-square rounded-xl overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl">
              <div class="absolute inset-0 bg-gradient-to-br from-purple-400 to-indigo-400"></div>
              <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <p class="text-white font-medium text-sm">Custom</p>
              </div>
            </button>

            <button data-tabs-target="btn" data-tab-id="blank" data-action="click->tabs#select"
                    class="group relative aspect-square rounded-xl overflow-hidden transition-all duration-300 hover:scale-105 hover:shadow-xl">
              <div class="absolute inset-0 bg-gradient-to-br from-gray-300 to-gray-400"></div>
              <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <p class="text-white font-medium text-sm">Blank</p>
              </div>
            </button>
          </div>
        </div>

        <!-- CTA Button -->
        <div class="flex flex-col sm:flex-row gap-4">
          <%= link_to "#pricing",
              class: "btn btn-primary btn-lg rounded-full" do %>
            <%= heroicon "sparkles", variant: :solid, class: "w-5 h-5" %>
            Get Envelopes with Quotes
          <% end %>

          <%= link_to dashboard_path,
              class: "btn btn-outline btn-lg rounded-full" do %>
            <%= heroicon "pencil", variant: :outline, class: "w-5 h-5" %>
            Create Custom Message
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>