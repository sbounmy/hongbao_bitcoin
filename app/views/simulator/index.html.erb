<div class="container mx-auto px-4 py-8 max-w-7xl">
  <div class="mb-8">
    <%= link_to root_path, class: "btn btn-ghost btn-sm gap-2" do %>
      <%= heroicon "arrow-left", variant: :solid, class: "w-4 h-4" %>
      Back to Home
    <% end %>
  </div>

  <div class="grid lg:grid-cols-2 gap-8">
    <!-- Left Column: Form -->
    <div>
      <%= render Simulator::FormComponent.new(
        years: @years
      ) %>

      <!-- Information Card -->
      <div class="card bg-base-200 shadow-xl mt-6">
        <div class="card-body">
          <h3 class="card-title text-lg">
            <%= heroicon "information-circle", variant: :solid, class: "w-6 h-6 text-info" %>
            How it works
          </h3>
          <ul class="space-y-2 text-sm text-base-content/80">
            <li class="flex gap-2">
              <span class="text-primary">•</span>
              <span>Select how many years you've been (or plan to be) gifting Bitcoin</span>
            </li>
            <li class="flex gap-2">
              <span class="text-primary">•</span>
              <span>Enter your typical gift amount in USD</span>
            </li>
            <li class="flex gap-2">
              <span class="text-primary">•</span>
              <span>Choose the occasions when you give Bitcoin as gifts</span>
            </li>
            <li class="flex gap-2">
              <span class="text-primary">•</span>
              <span>See how those gifts would have grown over time using historical Bitcoin prices</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Right Column: Results -->
    <div>
      <%= turbo_frame_tag "simulator_results" do %>
        <!-- Initial placeholder content -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <div class="flex flex-col items-center justify-center py-12 text-center">
              <%= heroicon "chart-bar", variant: :outline, class: "w-16 h-16 text-base-content/30 mb-4" %>
              <h3 class="text-xl font-semibold text-base-content/70 mb-2">
                Ready to simulate your Bitcoin gifting strategy?
              </h3>
              <p class="text-base-content/50">
                Fill in the form and click "Calculate DCA Impact" to see the results
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>