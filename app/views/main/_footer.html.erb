<%= render DockComponent.new do |dock| %>
  <% dock.with_item(label: "Home", icon: "home", href: dashboard_path) %>
  <% dock.with_item(label: "Create", icon: "sparkles", href: new_paper_path) %>
  <% dock.with_item(label: "Explore", icon: "banknotes", href: explore_papers_path) %>
  <% if authenticated? %>
    <% dock.with_item(label: "Sign out", icon: "user", href: session_path(Current.session), data: { turbo_method: :delete }) %>
  <% else %>
    <% dock.with_item(label: "Sign in", icon: "user", href: login_path) %>
  <% end %>
<% end %>