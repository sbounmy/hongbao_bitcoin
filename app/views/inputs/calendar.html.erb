<div class="container mx-auto px-4 py-4">
  <h1 class="text-2xl font-bold mb-6">Event Calendar</h1>

  <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
    <!-- Events list column (takes remaining width) -->
    <div class="lg:col-span-8">
      <h3 class="text-lg font-semibold mb-4">
        Events in <%= @date.strftime('%B %Y') %>
      </h3>

      <% if @month_events.any? %>
        <div class="space-y-3">
          <% @month_events.each do |event| %>
            <div class="card card-side bg-base-100 shadow-sm border border-base-200 hover:shadow-md transition-shadow">
              <% if event.image.attached? %>
                <figure class="w-24 h-24 flex-shrink-0">
                  <%= image_tag event.image, class: "w-full h-full object-cover" %>
                </figure>
              <% else %>
                <div class="w-24 h-24 flex-shrink-0 bg-base-200 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              <% end %>

              <div class="card-body p-4 flex-row items-center justify-between">
                <div class="flex-1">
                  <div class="flex items-start gap-4">
                    <div class="text-center min-w-[3rem]">
                      <div class="text-2xl font-bold text-primary"><%= event.anniversary(@date).day %></div>
                      <div class="text-xs uppercase text-base-content/60"><%= event.anniversary(@date).strftime('%b') %></div>
                    </div>

                    <div class="flex-1">
                      <h4 class="font-semibold text-base"><%= event.name %></h4>
                      <% if event.description.present? %>
                        <p class="text-sm text-base-content/70 mt-1 line-clamp-2"><%= event.description %></p>
                      <% end %>
                      <div class="flex gap-2 mt-2">
                        <% if event.age > 0 %>
                          <span class="badge badge-sm badge-ghost">
                            <%= event.age %> <%= 'year'.pluralize(event.age) %> old
                          </span>
                        <% end %>
                        <span class="text-xs text-base-content/60">
                          <%= event.anniversary(@date).strftime('%A') %>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="flex-shrink-0 ml-4">
                  <%= link_to input_path(event), class: "btn btn-sm btn-ghost btn-circle" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>No Bitcoin days to celebrate this month</span>
        </div>
      <% end %>
    </div>

    <!-- Calendar column (fixed width) -->
    <div class="lg:col-span-4">
      <!-- Month navigation -->
      <div class="flex justify-between items-center mb-4">
        <%= link_to calendar_inputs_path(date: @date.prev_month), class: "btn btn-circle btn-sm btn-outline" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>

        <h2 class="text-lg font-semibold">
          <%= @date.strftime('%B %Y') %>
        </h2>

        <%= link_to calendar_inputs_path(date: @date.next_month), class: "btn btn-circle btn-sm btn-outline" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>

      <!-- Calendar -->
      <div class="calendar rounded-lg p-3 bg-base-100 shadow-sm border border-base-200">
        <div class="grid grid-cols-7 gap-1 text-center mb-2">
          <% %w[M T W T F S S].each do |day| %>
            <div class="font-semibold text-xs text-base-content/60"><%= day %></div>
          <% end %>
        </div>

        <div class="grid grid-cols-7 gap-1">
          <% start_date = @date.beginning_of_month.beginning_of_week(:monday) %>
          <% end_date = @date.end_of_month.end_of_week(:monday) %>

          <% (start_date..end_date).each do |day| %>
            <% has_event = @event_dates.include?(day) %>
            <% is_current_month = day.month == @date.month %>
            <% is_today = day == Date.current %>

            <div class="aspect-square flex items-center justify-center relative rounded <%= 'bg-primary text-primary-content' if is_today %> <%= 'hover:bg-base-200' if is_current_month && !is_today %> <%= 'opacity-40' unless is_current_month %> transition-colors cursor-pointer">
              <% if has_event && !is_today %>
                <div class="absolute inset-0 flex items-center justify-center">
                  <div class="w-1 h-1 bg-primary rounded-full absolute bottom-1"></div>
                </div>
              <% end %>

              <span class="text-sm <%= 'font-semibold' if has_event || is_today %>">
                <%= day.day %>
              </span>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-4 flex items-center gap-4 text-xs text-base-content/60">
        <div class="flex items-center gap-1">
          <div class="w-3 h-3 bg-primary rounded"></div>
          <span>Today</span>
        </div>
        <div class="flex items-center gap-1">
          <div class="w-1 h-1 bg-primary rounded-full"></div>
          <span>Has events</span>
        </div>
      </div>
    </div>
  </div>
</div>