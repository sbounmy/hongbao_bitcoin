<div class="min-h-screen bg-gradient-to-b from-base-100 to-base-200">
  <div class="container mx-auto px-4 py-8">
    <!-- Header with Bitcoin theme -->
    <div class="flex items-center justify-between mb-8">
      <!-- Left: Title and subtitle -->
      <div>
        <div class="flex items-center gap-3 mb-2">
          <!-- Bitcoin Logo -->
          <%= image_tag image_url("bitcoin-64x64.svg"), class: "inline-block h-7.5 w-7.5 align-middle" %>
          <h1 class="text-3xl font-bold bg-gradient-to-r from-orange-500 to-orange-600 bg-clip-text text-transparent">
            Bitcoin Calendar
          </h1>
        </div>
        <p class="text-base-content/70">Celebrating Bitcoin's Historic Moments</p>
      </div>

      <!-- Right: Suggest a Bitcoin Day Button -->
      <%= link_to github_bitcoin_calendar_discussions_url, target: "_blank", class: "btn btn-primary bg-gradient-to-r from-orange-500 to-orange-600 border-0 hover:from-orange-600 hover:to-orange-700 text-white inline-flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Suggest a Bitcoin Day
      <% end %>
    </div>

    <!-- Calendar Section -->
    <div class="mb-8">
      <div class="w-full max-w-6xl mx-auto">
        <div class="bg-base-100 rounded-2xl shadow-xl p-6 border border-base-300">
          <!-- Month navigation -->
          <div class="flex justify-between items-center mb-6">
            <%= link_to calendar_inputs_path(date: @date.prev_month), class: "btn btn-circle btn-sm bg-base-200 hover:bg-orange-500 hover:text-white border-0 transition-all" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            <% end %>

            <h2 class="text-2xl font-bold flex items-center gap-2">
              <%= @date.strftime('%B %Y') %>
            </h2>

            <%= link_to calendar_inputs_path(date: @date.next_month), class: "btn btn-circle btn-sm bg-base-200 hover:bg-orange-500 hover:text-white border-0 transition-all" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            <% end %>
          </div>

          <!-- Calendar Grid -->
          <div class="bg-base-200/30 rounded-xl p-4">
            <div class="grid grid-cols-7 gap-1 text-center mb-2">
              <% %w[Sun Mon Tue Wed Thu Fri Sat].each do |day| %>
                <div class="font-medium text-sm text-base-content/70 py-2"><%= day %></div>
              <% end %>
            </div>

            <div class="grid grid-cols-7 gap-1">
              <% start_date = @date.beginning_of_month.beginning_of_week(:sunday) %>
              <% end_date = @date.end_of_month.end_of_week(:sunday) %>

              <% (start_date..end_date).each do |day| %>
                <% day_events = @events_by_day[day] || [] %>
                <% is_current_month = day.month == @date.month %>
                <% is_today = day == Date.current %>

                <div class="relative rounded-lg min-h-[140px] border <%= is_today ? 'border-orange-500 border-2' : 'border-base-300' %> <%= 'opacity-40' unless is_current_month %> hover:shadow-md transition-shadow overflow-hidden">
                  <% if day_events.any? && is_current_month %>
                    <% if day_events.size == 1 %>
                      <!-- Single event - full cell -->
                      <% event = day_events.first %>
                      <%= link_to input_path(event), class: "block relative h-full min-h-[140px]" do %>
                        <% if event.image.attached? %>
                          <%= image_tag event.image, class: "absolute inset-0 w-full h-full object-cover" %>
                          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-black/20"></div>
                        <% else %>
                          <div class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-orange-600/30"></div>
                        <% end %>
                        
                        <!-- Content overlay -->
                        <div class="relative h-full p-3 flex flex-col justify-between">
                          <div class="text-lg font-bold <%= event.image.attached? ? 'text-white' : 'text-base-content' %>">
                            <%= day.day %>
                          </div>
                          <div>
                            <p class="<%= event.image.attached? ? 'text-white' : 'text-orange-700' %> text-sm font-semibold line-clamp-2">
                              <%= event.name %>
                            </p>
                            <% if event.price_usd.present? %>
                              <p class="<%= event.image.attached? ? 'text-white/80' : 'text-base-content/60' %> text-xs mt-1">
                                BTC: $<%= number_with_delimiter(event.price_usd.to_f.round(0)) %>
                              </p>
                            <% end %>
                          </div>
                        </div>
                      <% end %>
                    <% else %>
                      <!-- Multiple events - split cell -->
                      <div class="flex h-full min-h-[140px]">
                        <% day_events.first(2).each_with_index do |event, index| %>
                          <%= link_to input_path(event), class: "block relative flex-1 #{index > 0 ? 'border-l border-base-300' : ''}" do %>
                            <% if event.image.attached? %>
                              <%= image_tag event.image, class: "absolute inset-0 w-full h-full object-cover" %>
                              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-black/20"></div>
                            <% else %>
                              <div class="absolute inset-0 bg-gradient-to-br from-orange-500/20 to-orange-600/30"></div>
                            <% end %>
                            
                            <!-- Content overlay -->
                            <div class="relative h-full p-2 flex flex-col justify-between">
                              <% if index == 0 %>
                                <div class="text-lg font-bold <%= event.image.attached? ? 'text-white' : 'text-base-content' %>">
                                  <%= day.day %>
                                </div>
                              <% else %>
                                <div></div>
                              <% end %>
                              <div>
                                <p class="<%= event.image.attached? ? 'text-white' : 'text-orange-700' %> text-xs font-semibold line-clamp-2">
                                  <%= event.name %>
                                </p>
                                <% if event.price_usd.present? %>
                                  <p class="<%= event.image.attached? ? 'text-white/80' : 'text-base-content/60' %> text-xs mt-0.5">
                                    $<%= number_with_delimiter(event.price_usd.to_f.round(0)) %>
                                  </p>
                                <% end %>
                              </div>
                            </div>
                          <% end %>
                        <% end %>
                      </div>
                      <% if day_events.size > 2 %>
                        <div class="absolute bottom-0 right-0 bg-black/60 text-white text-xs px-2 py-1 rounded-tl">
                          +<%= day_events.size - 2 %>
                        </div>
                      <% end %>
                    <% end %>
                  <% else %>
                    <!-- No events - plain cell -->
                    <div class="bg-base-100 h-full min-h-[140px] p-3">
                      <span class="text-sm font-medium <%= is_today ? 'text-orange-500' : 'text-base-content' %> <%= 'text-base-content/50' unless is_current_month %>">
                        <%= day.day %>
                      </span>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Events list section (moved to bottom) -->
    <div class="w-full max-w-6xl mx-auto">
        <div class="bg-base-100 rounded-2xl shadow-xl p-6 border border-base-300">
          <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
            <svg class="w-5 h-5 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Events in <%= @date.strftime('%B %Y') %>
          </h3>

          <% if @month_events.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              <% @month_events.each do |event| %>
                <%= link_to input_path(event), class: "block" do %>
                  <div class="group relative overflow-hidden rounded-xl bg-gradient-to-r from-base-200/50 to-base-300/30 hover:from-orange-500/10 hover:to-orange-600/5 transition-all duration-300 border border-base-300 hover:border-orange-500/30 h-full">
                    <div class="flex flex-col h-full">
                      <!-- Image or Icon -->
                      <% if event.image.attached? %>
                        <figure class="w-full h-40 relative overflow-hidden">
                          <%= image_tag event.image, class: "w-full h-full object-cover" %>
                          <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                        </figure>
                      <% else %>
                        <div class="w-full h-40 bg-gradient-to-br from-orange-500/20 to-orange-600/10 flex items-center justify-center">
                          <svg class="w-16 h-16 text-orange-500/60" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12.5 13.2c2.7 0 2.7-1.7 2.7-2.2 0-1.4-1.3-1.8-2.7-1.8h-.8v4h.8zm-.8-5.5h.5c2.2 0 2.2-1.2 2.2-1.5 0-1.1-.9-1.5-2.2-1.5h-.5v3zm2.5 8.8v2.2c0 .3-.2.5-.5.5s-.5-.2-.5-.5v-2.1c-.9-.1-1.8-.3-2.6-.7-.3-.1-.4-.4-.3-.7.1-.3.4-.4.7-.3.9.4 1.9.6 2.9.6h.3c1.7 0 3.1-.4 3.1-2 0-2.1-2.4-2.3-3.9-2.6-1.9-.4-3.2-.7-3.2-2.6 0-1.8 1.5-2.5 3.2-2.5v-2c0-.3.2-.5.5-.5s.5.2.5.5v2c.7.1 1.5.2 2.2.5.3.1.4.4.3.7-.1.3-.4.4-.7.3-.7-.3-1.5-.4-2.3-.5-1.7 0-2.7.4-2.7 1.5 0 1.3 1.5 1.5 3 1.9 2.1.5 4.1.9 4.1 3.4-.1 1.9-1.7 2.9-3.6 3z"/>
                          </svg>
                        </div>
                      <% end %>

                      <!-- Content -->
                      <div class="flex-1 p-4">
                        <div class="flex items-center gap-2 mb-2">
                          <div class="text-center bg-gradient-to-b from-orange-500 to-orange-600 text-white rounded-md px-2 py-1 shadow-sm">
                            <div class="text-lg font-bold leading-none"><%= event.anniversary(@date).day %></div>
                            <div class="text-xs uppercase"><%= event.anniversary(@date).strftime('%b') %></div>
                          </div>
                          <h4 class="font-bold text-base group-hover:text-orange-500 transition-colors flex-1">
                            <%= event.name %>
                          </h4>
                        </div>
                        
                        <% if event.description.present? %>
                          <p class="text-sm text-base-content/70 line-clamp-2 mb-2">
                            <%= event.description %>
                          </p>
                        <% end %>
                        
                        <div class="flex flex-wrap items-center gap-2 mt-auto">
                          <% if event.age > 0 %>
                            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-orange-500/10 text-orange-600 border border-orange-500/20">
                              <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                              </svg>
                              <%= event.age %> <%= 'year'.pluralize(event.age) %>
                            </span>
                          <% end %>
                          <% if event.price_usd.present? %>
                            <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-green-500/10 text-green-600 border border-green-500/20">
                              $<%= number_with_delimiter(event.price_usd.to_f.round(2)) %>
                            </span>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <p class="text-base-content/50">No Bitcoin milestones this month</p>
              <p class="text-sm text-base-content/40 mt-2">Check other months for historic events</p>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>