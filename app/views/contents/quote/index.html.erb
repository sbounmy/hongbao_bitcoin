<%
  @page_h1 = 'Bitcoin Quotes'
  @intro_text = 'Explore wisdom about Bitcoin from influential voices throughout history'

  # Set meta tags for SEO
  set_meta_tags(
    title: 'Bitcoin Quotes - Wisdom from Bitcoin Pioneers',
    description: 'Discover inspiring Bitcoin quotes from thought leaders, pioneers, and visionaries. Satoshi Nakamoto, Michael Saylor, and more.',
    keywords: 'bitcoin quotes, satoshi nakamoto quotes, bitcoin wisdom, cryptocurrency quotes, bitcoin philosophy, orange pill quotes',
    canonical: bitcoin_contents_path(klass: 'quotes'),
    og: {
      title: 'Bitcoin Quotes Collection',
      description: 'Explore wisdom about Bitcoin from influential voices throughout history',
      type: 'website'
    },
    twitter: {
      card: 'summary',
      title: 'Bitcoin Quotes Collection',
      description: 'Explore wisdom about Bitcoin from influential voices throughout history'
    }
  )
%>

  <%= render "shared/header" %>
<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-4"><%= @page_h1 %></h1>
  <p class="text-lg mb-8"><%= @intro_text %></p>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @contents.published.each do |content| %>
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <blockquote class="text-lg italic mb-4">
            "<%= content.text.truncate(150) %>"
          </blockquote>
          <p class="font-semibold">— <%= content.author %></p>
          <div class="card-actions justify-end mt-4">
            <%= link_to "Read More →",
                        bitcoin_content_path(klass: 'quotes', slug: content.slug),
                        class: "btn btn-sm btn-ghost" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= paginate @contents %>
</div>