<%
  @page_h1 = 'Bitcoin Artists'
  @intro_text = 'Discover amazing Bitcoin-themed artwork from talented artists'
%>

<% content_for :title do %>
  <%= 'Bitcoin Artists' %>
<% end %>

<% content_for :description do %>
  <%= 'Browse talented Bitcoin artists and their unique crypto-inspired artwork' %>
<% end %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-4"><%= @page_h1 %></h1>
  <p class="text-lg mb-8"><%= @intro_text %></p>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @contents.each do |content| %>
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title"><%= content.name %></h2>
          <% if content.style.present? %>
            <div class="badge badge-outline"><%= content.style %></div>
          <% end %>
          <% if content.bio.present? %>
            <p class="text-sm mt-2"><%= content.bio.truncate(100) %></p>
          <% end %>
          <div class="card-actions justify-end mt-4">
            <%= link_to "View Profile â†’", 
                        bitcoin_content_path(klass: 'artists', slug: content.slug),
                        class: "btn btn-sm btn-ghost" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <%= paginate @contents %>
</div>