<div class="relative">
  <%= render ClipboardComponent.new do |clipboard| %>
    <%= clipboard.with_input do %>
      <input type="text"
             data-controller="binding"
             data-binding-name-value="publicAddressText"
             data-action="bitcoin:changed@window->binding#value"
             readonly
             class="input-public-address w-full bg-transparent text-white font-mono text-sm py-2 px-3 pr-10 rounded border border-white/10"
             data-clipboard-target="source">
    <% end %>
  <% end %>
</div>