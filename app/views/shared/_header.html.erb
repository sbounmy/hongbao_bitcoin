<header class="bg-white/20 backdrop-blur-sm shadow-xs w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-2 flex justify-between items-center">
        <div class="flex items-center gap-1.5 sm:gap-2">
            <%= image_tag "hongbao-bitcoin.png", class: "w-6 h-6 sm:w-8 sm:h-8" %>
            <h1 class="text-base sm:text-xl font-semibold"><%= link_to "HONGBAO", root_path, class: "text-neutral" %></h1>
        </div>

        <div class="flex items-center gap-1">
            <!-- Navigation Links -->
            <nav class="hidden md:flex items-center gap-6 mr-2">
                <%= link_to "Pricing", pricing_path, class: "text-sm font-medium text-neutral/80 hover:text-primary transition-colors" %>
                <%= link_to "Bitcoin Companies", bitcoin_companies_path, class: "text-sm font-medium text-neutral/80 hover:text-primary transition-colors" %>
            </nav>

            <span class="pt-2 hidden sm:inline-block">
                <%= link_to 'Star', github_url, class: "github-button", data: { color_scheme: "no-preference: light; light: light; dark: dark;", size: "large", show_count: "true", aria_label: "Star sbounmy/hongbao_bitcoin on GitHub" } %>
            </span>

            <%# SCAN button - icon only %>
            <%= link_to hong_baos_path,
                class: "btn btn-ghost btn-sm btn-circle normal-case rounded-selector hover:bg-white/30 transition-colors" do %>
                <%= heroicon "viewfinder-circle", class: "w-5 h-5 text-neutral" %>
            <% end %>

            <%# Login/User - hidden on mobile, shown in menu %>
            <div class="flex">
                <% if authenticated? %>
                    <%= render "shared/user_drawer" %>
                <% else %>
                    <%= link_to "Login", signup_path, class: "btn btn-outline btn-neutral btn-sm rounded-selector hover:bg-white/30 transition-colors" %>
                <% end %>
            </div>
        </div>
    </div>
</header>