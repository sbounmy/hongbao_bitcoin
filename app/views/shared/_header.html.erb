<header class="bg-[#F04747] border-b-4 border-[#FFB636]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <%# Logo %>
      <%= link_to root_path, class: "flex items-center" do %>
        <%= image_tag "hongbao-bitcoin-logo-520.png",
            class: "h-8 w-8 rounded-full border border-[#FFB636]",
            alt: "Bitcoin Hong Bao Logo" %>
        <span class="ml-2 text-[#FFB636] font-bold text-lg">Hong Bao</span>
      <% end %>

      <%# User Menu %>
      <div class="flex items-center">
        <% if authenticated? %>
          <%# Render the UserDrawerComponent, passing the avatar label as content %>
          <%= render UserDrawerComponent.new do %>
            <%# This label triggers the drawer identified by drawer_id %>
            <label for="<%= UserDrawerComponent.new.drawer_id %>"
                    tabindex="0"
                    class="btn btn-ghost btn-circle avatar cursor-pointer">
              <div class="w-8 rounded-full border border-[#FFB636]">
                <img src="<%= gravatar_url(Current.user.email) %>"
                     alt="User avatar">
              </div>
            </label>
          <% end %>
        <% else %>
          <%= link_to "Sign in", login_path,
              class: "text-white hover:text-[#FFB636] transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>
</header>