<header class="bg-base-100/20 shadow-xs w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
        <div class="flex items-center gap-2">
            <%= image_tag "hongbao-bitcoin.png", class: "w-8 h-8" %>
            <h1 class="text-xl hidden sm:inline-block font-semibold"><%= link_to "Hong₿ao", root_path, class: "text-base-content" %></h1>
        </div>
        
        <div class="flex items-center gap-2">
            <!-- Navigation Links -->
            <nav class="hidden md:flex items-center gap-6 mr-4">
                <%= link_to "Pricing", pricing_path, class: "text-sm font-medium text-base-content/80 hover:text-primary transition-colors" %>
                <%= link_to "Bitcoin Companies", bitcoin_companies_path, class: "text-sm font-medium text-base-content/80 hover:text-primary transition-colors" %>
            </nav>
            
            <!-- Theme Toggle -->
            <label class="swap swap-rotate btn btn-ghost btn-circle btn-sm"
                   data-controller="theme">
                
                <!-- this hidden checkbox controls the state -->
                <input type="checkbox" data-action="change->theme#toggle" />
                
                <!-- sun icon -->
                <svg class="swap-off fill-current w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/></svg>
                
                <!-- moon icon -->
                <svg class="swap-on fill-current w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/></svg>
            </label>
            <span class="pt-2 hidden sm:inline-block">
                <%= link_to 'Star', github_url, class: "github-button", data: { color_scheme: "no-preference: light; light: light; dark: dark;", size: "large", show_count: "true", aria_label: "Star sbounmy/hongbao_bitcoin on GitHub" } %>
            </span>

            <%# Replaced icon-only link with a button including text for clarity %>
            <%= link_to hong_baos_path,
                class: "btn btn-ghost btn-sm normal-case rounded-selector hover:bg-base-200/20 transition-colors" do %>
                <%= heroicon "viewfinder-circle", class: "w-5 h-5 mr-1" %>
                <span>SCAN ₿</span>
            <% end %>


            <% if authenticated? %>
                <%= render "shared/user_drawer" %>
            <% else %>
                <%= link_to "Login", signup_path, class: "btn btn-outline rounded-selector hover:bg-base-200/20 transition-colors" %>
            <% end %>
        </div>
    </div>
</header>