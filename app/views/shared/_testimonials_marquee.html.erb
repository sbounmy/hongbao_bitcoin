
<!-- Testimonials Marquee -->
<section class="py-12 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <style>
      @keyframes marquee {
        from { transform: translateX(0); }
        to { transform: translateX(-100%); }
      }
      @keyframes marquee-right {
        from { transform: translateX(-100%); }
        to { transform: translateX(0); }
      }
      .animate-marquee {
        animation: marquee 40s linear infinite;
      }
      .animate-marquee-right {
        animation: marquee-right 40s linear infinite;
      }
      .marquee-group:hover .animate-marquee,
      .marquee-group:hover .animate-marquee-right {
        animation-play-state: paused;
      }
    </style>

    <%
      # First row tweet IDs (longer tweets)
      row1_tweet_ids = [
        "1914971769582047470", # Salma Talbi - "Forget flowers..."
        "1943578237214327268", # Stephane ₿ounmy - "At friends birthday..."
        "1937164001797873711", # Geyser - "Hong₿ao: Gifting Bitcoin..."
        "1953575928413741319"  # Ponderizor - "For the wedding..."
      ]
    %>

    <!-- Row 1: Right to Left (longer tweets) -->
    <div class="marquee-group relative w-full overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]">
      <div class="flex animate-marquee-right">
        <ul class="flex items-center justify-center md:justify-start flex-shrink-0">
          <% row1_tweet_ids.each do |tweet_id| %>
            <li class="flex-shrink-0 mx-4">
              <div class="h-[400px] w-[350px] overflow-y-auto overflow-x-hidden [mask-image:_linear-gradient(to_bottom,_black_0,_black_calc(100%-50px),transparent_100%)]">
                <%= render TweetComponent.new(tweet_id: tweet_id) %>
              </div>
            </li>
          <% end %>
        </ul>
        <!-- Duplicate for seamless loop -->
        <ul class="flex items-center justify-center md:justify-start flex-shrink-0" aria-hidden="true">
          <% row1_tweet_ids.each do |tweet_id| %>
            <li class="flex-shrink-0 mx-4">
              <div class="h-[400px] w-[350px] overflow-y-auto overflow-x-hidden [mask-image:_linear-gradient(to_bottom,_black_0,_black_calc(100%-50px),transparent_100%)]">
                <%= render TweetComponent.new(tweet_id: tweet_id) %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <%
      # Second row tweet IDs (shorter tweets)
      row2_tweet_ids = [
        "1936760123453755629", # Hwan ChinYang - "I hope my grandma..."
        "1937208973666709866", # MoparMiningLLC - "yes! love it..."
        "1937165010771542480", # Sunflower - "No apps, no tracking..."
        "1940712311171522783", # The Parallax Group - "Best way to convert..."
        "1958230451509936551"  # Blade.MOV - "This is such a fun idea..."
      ]
    %>

    <!-- Row 2: Left to Right (shorter tweets) -->
    <div class="marquee-group relative w-full overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)] mt-8">
      <div class="flex animate-marquee">
        <ul class="flex items-center justify-center md:justify-start flex-shrink-0">
          <% row2_tweet_ids.each do |tweet_id| %>
            <li class="flex-shrink-0 mx-4">
              <div class="h-[250px] w-[350px] overflow-y-auto overflow-x-hidden [mask-image:_linear-gradient(to_bottom,_black_0,_black_calc(100%-40px),transparent_100%)]">
                <%= render TweetComponent.new(tweet_id: tweet_id) %>
              </div>
            </li>
          <% end %>
        </ul>
        <!-- Duplicate for seamless loop -->
        <ul class="flex items-center justify-center md:justify-start flex-shrink-0" aria-hidden="true">
          <% row2_tweet_ids.each do |tweet_id| %>
            <li class="flex-shrink-0 mx-4">
              <div class="h-[250px] w-[350px] overflow-y-auto overflow-x-hidden [mask-image:_linear-gradient(to_bottom,_black_0,_black_calc(100%-40px),transparent_100%)]">
                <%= render TweetComponent.new(tweet_id: tweet_id) %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>