<div class="min-h-screen lg:flex">
  <!-- Left Column - Scrollable Content -->
  <div class="lg:w-1/2 lg:h-screen lg:overflow-y-auto relative">
    <!-- Fixed position background that covers the entire scrollable area -->
    <div class="fixed lg:w-1/2 h-full inset-0 pointer-events-none">
      <!-- Base gradient -->
      <div class="absolute inset-0 bg-gradient-to-br from-[#1A1A1A] via-[#2B2B2B] to-[#F04747]"></div>

      <!-- Glow effect -->
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_left,rgba(240,71,71,0.4),transparent_70%)]"></div>

      <!-- Vignette effect -->
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_30%,rgba(0,0,0,0.4))]"></div>
    </div>

    <!-- Content container -->
    <div class="relative z-10">
      <!-- Sticky Header -->
      <div class="sticky top-0 z-20 p-8 bg-gradient-to-b from-black to-transparent">
        <%= render "hong_baos/new/header" %>
      </div>

      <!-- Scrollable Content -->
      <div class="p-8 pt-0">
        <div class="mx-auto space-y-32">
          <!-- Hero Section -->
          <div class="mt-24 space-y-8">
            <h1 class="text-6xl font-bold text-white leading-tight">
              <span class="text-[#F04747]">Print</span> & <span class="text-[#FFB636]">gift</span><br/>
              <span class="text-white">bitcoin instantly</span>
            </h1>
            <p class="text-xl text-white/90 leading-relaxed max-w-lg">
              HongBao Bitcoin lets you create beautiful bills containing bitcoin. Perfect for gifting during Chinese New Year or any special occasion.
            </p>
            <div class="flex gap-4 pt-4">
              <%= link_to "Get started", "#form-section",
                  class: "inline-flex items-center px-8 py-4 rounded-full
                         bg-[#F04747] text-white text-lg font-medium
                         hover:bg-[#FFB636] transform hover:scale-105
                         transition duration-300" %>
            </div>
          </div>

          <!-- About Section -->
          <section class="space-y-24">
            <!-- About Me -->
            <div class="relative">
              <%= render "shared/about" %>
            </div>

            <!-- FAQ -->
            <div class="relative">
              <%= render "shared/faq" %>
            </div>

            <!-- Donate -->
            <div class="relative">
              <%= render "shared/donate" %>
            </div>
          </section>

          <!-- Footer -->
          <div class="pt-16 pb-8">
            <%= render "shared/footer" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Column - Fixed Form -->
  <div class="lg:w-1/2 lg:h-screen relative">
    <!-- Form Container -->
    <div class="h-full flex items-center justify-center p-8 bg-[#F04747]">
      <div class="w-full mx-12 bg-[#FFB636]/5 backdrop-blur-lg p-8
                  rounded-3xl shadow-2xl border-4 border-[#FFB636] outline outline-8 outline-[#F04747]">
        <%= turbo_frame_tag "qr_scanner" %>

        <%= form_with(model: @hong_bao,
                      url: new_hong_bao_path,
                      class: "space-y-6",
                      data: {
                        controller: "hong-bao steps bitcoin",
                        steps_hidden_class: "hidden",
                        steps_current_value: @current_step,
                        hong_bao_current_paper_value: @hong_bao.paper_id,
                        bitcoin_auto_generate_value: true,
                        bitcoin_network_value: Current.network
                      }) do |form| %>

          <%= render "hong_baos/progress_steps", steps: @steps, current_step: @current_step %>
          <%= render "shared/error_messages", resource: @hong_bao if @hong_bao.errors.any? %>

          <%= render "hong_baos/new/steps/design",
              form: form,
              papers: @papers,
              hong_bao: @hong_bao %>

          <%= render "hong_baos/new/steps/print",
              form: form,
              hong_bao: @hong_bao,
              papers: @papers,
              selected_paper: @papers.find { |p| p.id.to_s == @hong_bao.paper_id.to_s } || @papers.first %>

          <%= render "hong_baos/new/steps/top_up",
              form: form,
              payment_methods: @payment_methods,
              hong_bao: @hong_bao %>
        <% end %>
      </div>
    </div>
  </div>
</div>