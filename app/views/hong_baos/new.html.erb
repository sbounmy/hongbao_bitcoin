      <div class="text-white space-y-4 flex-1">
        <p class="font-medium text-[#FFB636] text-xl">Stephane Bounmy</p>
        <p class="text-lg leading-relaxed"><%= t('.about.bio') %></p>
        <div class="flex gap-4">
          <%= link_to "Linkedin", "https://linkedin.com/in/stephanebounmy", 
              class: "text-[#FFB636] hover:text-white transition-colors",
              target: "_blank" %>
          <%= link_to "Twitter", "https://twitter.com/sbounmy", 
              class: "text-[#FFB636] hover:text-white transition-colors",
              target: "_blank" %>
          <%= link_to "GitHub", "https://github.com/sbounmy", 
              class: "text-[#FFB636] hover:text-white transition-colors",
              target: "_blank" %>
        </div>
      </div>
    </div>
  </div>
</div>

  <div class="w-full max-w-[480px] bg-[#F04747] p-8 
          border-4 border-[#FFB636] outline outline-8 outline-[#F04747] 
          shadow-lg relative">
    <div class="space-y-4">
      <h2 class="text-[#FFB636] text-xl font-bold"><%= t('.donate.title') %></h2>
      
      <div class="text-white space-y-4">
