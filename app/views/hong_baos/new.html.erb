<div class="min-h-screen bg-[#FFE5E5] flex flex-col items-center justify-center gap-8">
  <div class="w-full max-w-[480px] bg-[#F04747] rounded-[32px] p-8 border-2 border-[#FFB636] shadow-lg relative">
    <%# Logo %>
    <div class="flex justify-between mb-8">

    <%# Language Toggle %>
        <%= image_tag "hongbao-bitcoin-logo-520.png", 
            class: "w-16 h-16 rounded-full border-2 border-[#FFB636]",
            alt: "Bitcoin Hong Bao Logo" %>
            <div>
    <h1 class="text-[28px] font-bold text-[#FFB636] text-center">
      <%= t('.title') %>
    </h1>
  
    <div class="text-white text-center">
      <%= t('.subtitle') %>
    </div>
    </div>

    <div class="flex justify-end mb-6 items-center">
      <%= link_to t('.switch_language'),
          { locale: I18n.locale == :en ? :'zh-CN' : :en },
          class: "text-white" %>
    </div>
    </div>


    <%# Title %>

    <%# Paper Selection %>
    <div class="mb-6">
      <div class="text-white mb-2"><%= t('.select_style') %></div>
      <div class="grid grid-cols-1 gap-4">
        <% Paper.active.each do |paper| %>
          <%= link_to new_hong_bao_path(paper: paper.id, amount: params[:amount]), class: "relative group" do %>
            <%= image_tag paper.image,
                class: "w-full rounded-lg transition-all duration-200
                        #{params[:paper] == paper.id.to_s ? 'ring-4 ring-[#FFB636]' : 'opacity-40 group-hover:opacity-100'}" %>
            <div class="absolute bottom-2 left-2 text-white text-sm font-medium">
              <%= t(".styles.#{paper.style}") %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <%# Mt Pelerin Direct Link %>
    <div class="space-y-6">
      <%= link_to t('.submit'),
          "https://buy.mtpelerin.com/?#{
            {
              _ctkn: "954139b2-ef3e-4914-82ea-33192d3f43d3",
              type: 'direct-link',
              lang: I18n.locale,
              tab: 'buy',
              tabs: 'buy',
              net: 'bitcoin_mainnet',
              nets: 'bitcoin_mainnet',
              curs: 'EUR,USD,SGD',
              ctry: 'FR',
              primary: 'red',
              success: '#FFB636',
              amount: @hong_bao.amount || 50,
              mylogo: image_url('hongbao-bitcoin-logo-520.png')
            }.to_param
          }",
          class: "block w-full bg-[#FFB636] text-white rounded-lg py-3 px-4 border-none focus:ring-0 text-center",
          target: "_blank" %>
    </div>

  </div>

  <div class="w-full max-w-[480px] bg-[#F04747] rounded-[32px] p-8 border-2 border-[#FFB636] shadow-lg relative">
        <%# FAQ Section %>
      <div class="mt-8 space-y-4">
        <h2 class="text-[#FFB636] text-xl font-bold"><%= t('.faq.title') %></h2>
        <div class="space-y-4">
          <% t('.faq.questions').each do |key, qa| %>
            <div class="border border-white/20 rounded-lg overflow-hidden">
              <details class="group">
                <summary class="flex justify-between items-center p-4 cursor-pointer text-[#FFB636] font-medium hover:bg-white/10 transition-colors">
                  <%= qa[:q] %>
                  <span class="transition-transform duration-200 group-open:-rotate-180">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                    </svg>
                  </span>
                </summary>
                <div class="p-4 text-white bg-white/10 border-t border-white/20">
                  <%= qa[:a] %>
                </div>
              </details>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>