<div class="mt-6 space-y-4 animate-fade-in">

  <div class="relative">
    <canvas id="imageCanvas" class="border w-full"></canvas>
  </div>

  <button id="saveButton" class= "block w-full bg-[#FFB636] text-white rounded-lg py-3 px-4 
                    border-none focus:ring-0 text-center cursor-pointer">
    <span>Save as PDF</span>
  </button>
