<% content_for :skip_analytics, true %>

<%= content_for :head do %>
  <meta name="csrf-token" content="<%= form_authenticity_token %>">
  <meta name="robots" content="noindex, follow">
<% end %>

<%# Content is rendered inside the BTCDex screen area %>
<%= render ContentLoaderComponent.new(url: form_hong_bao_path(@hong_bao.address)) do %>
  <%# BTCDex-style skeleton loading - dark theme %>
  <div class="space-y-6">
    <%# Main section skeleton %>
    <div class="space-y-3">
      <div class="skeleton h-3 w-20 bg-white/10"></div>
      <div class="skeleton h-12 w-40 bg-white/10"></div>
      <div class="skeleton h-6 w-32 bg-white/10"></div>
      <div class="skeleton h-4 w-48 bg-white/10"></div>
    </div>

    <%# Action buttons skeleton %>
    <div class="flex gap-2">
      <div class="skeleton flex-1 h-10 bg-white/10 rounded-xl"></div>
      <div class="skeleton flex-1 h-10 bg-white/10 rounded-xl"></div>
      <div class="skeleton flex-1 h-10 bg-white/10 rounded-xl"></div>
    </div>

    <%# Divider %>
    <div class="border-t border-white/10"></div>

    <%# Transaction history skeleton %>
    <div class="space-y-3">
      <div class="skeleton h-3 w-32 bg-white/10"></div>
      <div class="flex items-center gap-3">
        <div class="skeleton w-10 h-10 rounded-full bg-white/10"></div>
        <div class="flex-1 space-y-2">
          <div class="skeleton h-4 w-28 bg-white/10"></div>
          <div class="skeleton h-3 w-20 bg-white/10"></div>
        </div>
        <div class="skeleton h-4 w-24 bg-white/10"></div>
      </div>
      <div class="flex items-center gap-3">
        <div class="skeleton w-10 h-10 rounded-full bg-white/10"></div>
        <div class="flex-1 space-y-2">
          <div class="skeleton h-4 w-28 bg-white/10"></div>
          <div class="skeleton h-3 w-20 bg-white/10"></div>
        </div>
        <div class="skeleton h-4 w-24 bg-white/10"></div>
      </div>
    </div>
  </div>
<% end %>
