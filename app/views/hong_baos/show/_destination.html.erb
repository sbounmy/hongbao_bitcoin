<%# BTCDex Style Destination Entry - Dark Integrated Design %>
<div class="space-y-6"
     data-controller="bitcoin-address form-wallet"
     data-form-wallet-bitcoin-outlet="#bitcoin"
     data-action="bitcoin-address:error->form-wallet#error bitcoin-address:success->form-wallet#success"
     data-bitcoin-address-network-value="<%= Current.network %>">

  <%# Section Header %>
  <h2 class="text-base-content/50 text-xs uppercase tracking-wider">Enter Destination</h2>

  <%# Address Input %>
  <div class="relative">
    <%= form.text_field :to_address,
        class: "w-full bg-base-content/10 text-base-content border-2 border-transparent
                focus:border-secondary rounded-xl py-3 px-4 pr-12 text-sm
                placeholder-base-content/50 focus:outline-none",
        placeholder: "Enter Bitcoin address",
        data: {
          action: "input->bitcoin-address#validate",
          bitcoin_address_target: "input",
          form_wallet_target: "destination"
        } %>

    <button type="button"
            data-action="click->steps#scanQR"
            class="absolute right-3 top-1/2 -translate-y-1/2 text-base-content/60 hover:text-secondary
                  transition-colors">
      <%= heroicon "qr-code", variant: :outline, class: "w-6 h-6" %>
    </button>

    <div data-bitcoin-address-target="errorMessage"
         class="text-error text-xs mt-1 hidden">
      Please enter a valid Bitcoin address.
    </div>
  </div>

  <%# Fee Selection %>
  <div class="space-y-3">
    <span class="text-base-content/50 text-xs uppercase tracking-wider">Network Fee</span>
    <div class="grid grid-cols-3 gap-2">
      <% TransactionFee.current.priority_options.each do |option| %>
        <label class="cursor-pointer">
          <%= form.radio_button :fee_rate,
              option[:satoshis],
              class: "hidden peer",
              checked: option[:default],
              data: {
                form_wallet_target: "fee"
              } %>
          <div class="p-3 bg-base-content/10 rounded-xl border-2 border-transparent
                      peer-checked:border-secondary peer-checked:bg-base-content/20
                      hover:bg-base-content/20 transition-colors text-base-content">
            <div class="text-center space-y-1">
              <span class="font-medium text-sm block"><%= option[:name] %></span>
              <span class="text-xs text-base-content/60 block">
                ~<%= time_ago_in_words(option[:minutes].minutes.ago,
                    scope: 'datetime.distance_in_words.short') %>
              </span>
              <div class="text-xs text-secondary">
                $<%= number_with_precision(option[:amount] * Spot.current(:usd).usd, precision: 2) %>
              </div>
            </div>
          </div>
        </label>
      <% end %>
    </div>
  </div>

  <%# UTXOs Section %>
  <%= render ContentLoaderComponent.new(url: utxos_hong_bao_path(@hong_bao.address, testnet: Current.testnet?), lazy_loading: true) %>

  <%# Divider %>
  <div class="border-t border-base-content/10"></div>

  <%# Action Buttons %>
  <div class="flex gap-2">
    <%= render "hong_baos/new/previous_button" %>

    <%= button_tag class: "flex-1 py-2.5 px-4 bg-secondary text-neutral font-semibold rounded-xl
                          hover:bg-secondary/90 transition-colors disabled:opacity-30
                          flex items-center justify-center gap-2 text-sm",
        data: {
          action: "form-wallet#transfer",
          form_wallet_target: "submitButton"
        } do %>
      <%= heroicon "paper-airplane", class: "w-4 h-4" %>
      <span>Transfer</span>
    <% end %>
  </div>
</div>
