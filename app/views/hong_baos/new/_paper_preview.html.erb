<div data-hong-bao-target="paperContainer">
  <%= form.hidden_field :paper_id,
      data: { hong_bao_target: "selectedPaper" },
      value: papers.first.id %>

  <% papers.each do |paper| %>
    <div data-paper-preview data-paper-id="<%= paper.id %>"
         class="space-y-4 <%= paper == papers.first ? '' : 'hidden' %>">
      <div class="grid grid-cols-1 gap-4">
        <div class="border-2 border-[#FFB636] rounded-lg p-2">
          <%= render partial: "hong_baos/new/front_bill", locals: { paper: paper, hong_bao: hong_bao } %>
        </div>
        <div class="border-2 border-[#FFB636] rounded-lg p-2">
          <%= render partial: "hong_baos/new/back_bill", locals: { paper: paper, hong_bao: hong_bao } %>
        </div>
      </div>

      <%= render "hong_baos/new/wallet_info", hong_bao: hong_bao if hong_bao.mnemonic && hong_bao.address %>
    </div>
  <% end %>
</div>