<div class="text-white space-y-4">
  <%# Public Address Section %>
  <div class="bg-black/20 p-4 rounded">
    <div class="flex items-center justify-between mb-2">
      <span class="text-white/60">Address:</span>
      <button onclick="navigator.clipboard.writeText('<%= hong_bao.address %>')"
              class="text-xs px-2 py-1 bg-white/10 hover:bg-white/20 rounded transition-colors duration-300">
        Copy
      </button>
    </div>
    <p class="text-sm font-mono break-all mb-4"><%= hong_bao.address %></p>
    <div class="flex justify-center bg-white p-2 rounded">
      <%= image_tag bitcoin_qr_code(bitcoin_url(hong_bao.address,
        label: "Hong Bao Bitcoin Address",
        message: "Send BTC to this address"
      )), alt: "Bitcoin Address QR Code", class: "w-48 h-48" %>
    </div>
  </div>

  <%# Private Key Section - Hidden by Default %>
  <div class="bg-black/20 p-4 rounded" data-controller="private-key">
    <div class="flex items-center justify-between mb-2">
      <span class="text-white/60">Private Key:</span>
      <button onclick="navigator.clipboard.writeText('<%= hong_bao.private_key %>')"
              class="text-xs px-2 py-1 bg-white/10 hover:bg-white/20 rounded transition-colors duration-300"
              data-private-key-target="copyButton"
              style="display: none;">
        Copy
      </button>
    </div>

    <%# Warning and Show Button %>
    <div data-private-key-target="warning">
      <div class="bg-[#F04747]/20 p-3 rounded mb-3">
        <p class="text-sm">⚠️ Warning: Your private key gives complete control over your funds.
           Never share it with anyone and store it securely.</p>
      </div>
      <button data-action="private-key#reveal"
              class="w-full py-2 px-4 bg-[#F04747] hover:bg-[#F04747]/80 rounded transition-colors duration-300">
        Show Private Key
      </button>
    </div>

    <%# Hidden Private Key Content %>
    <div data-private-key-target="content" style="display: none;">
      <p class="text-sm font-mono break-all mb-4"><%= hong_bao.private_key %></p>
      <div class="flex justify-center bg-white p-2 rounded">
        <%= image_tag bitcoin_qr_code(hong_bao.private_key),
                      alt: "Private Key QR Code",
                      class: "w-48 h-48" %>
      </div>
    </div>
  </div>

  <%# Mnemonic Section %>
  <div class="bg-black/20 p-4 rounded">
    <div class="flex items-center justify-between mb-2">
      <span class="text-white/60">Mnemonic:</span>
      <button onclick="navigator.clipboard.writeText('<%= hong_bao.mnemonic %>')"
              class="text-xs px-2 py-1 bg-white/10 hover:bg-white/20 rounded transition-colors duration-300">
        Copy
      </button>
    </div>
    <p class="text-sm font-mono break-all"><%= hong_bao.mnemonic %></p>
  </div>

  <%# Generate New Button %>
  <div class="flex justify-end">
    <%= link_to new_hong_bao_path,
                class: "text-sm px-3 py-1.5 rounded-lg bg-white/10 hover:bg-white/20 text-white/90
                       transition-colors duration-300 flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
      </svg>
      Generate New
    <% end %>
  </div>
</div>