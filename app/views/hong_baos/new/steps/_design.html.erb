<div class="flex flex-col h-full max-h-full overflow-y-auto pb-16" data-steps-target="content" data-steps-index="1">
  <!-- Scrollable Content Area -->
  <div class="flex-1">
    <div class="p-8">
      <div class="flex flex-col">
        <div class="mb-8">
          <div data-hong-bao-target="walletInfo" class="space-y-3">
            <div class="space-y-1">
              <div class="flex items-center justify-between">
                <span class="text-[#FFB636]">Recovery Phrase (24 words)</span>
                <button type="button"
                        data-action="bitcoin#generate"
                        class="text-[#FFB636] p-1.5 hover:text-[#FFB636]/80 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                  </svg>
                </button>
              </div>
              <div class="relative" data-controller="clipboard" data-clipboard-success-message-value="Recovery phrase copied!">
                <textarea readonly
                          rows="3"
                          class="w-full bg-transparent text-white font-mono text-sm py-2 px-3 pr-12 rounded border border-white/10 resize-none"
                          data-clipboard-target="source"
                          data-controller="binding"
                          data-binding-name-value="mnemonicText"
                          data-action="bitcoin:changed@window->binding#value"></textarea>
                <button data-action="clipboard#copy"
                        class="absolute right-2 top-1/2 -translate-y-1/2 text-[#FFB636] p-1.5 hover:text-[#FFB636]/80 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
                  </svg>
                </button>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-3">
              <div class="space-y-1">
                <span class="text-[#FFB636]">Private Key</span>
                <div class="relative" data-controller="clipboard" data-clipboard-success-message-value="Private key copied!">
                  <input type="text"
                         readonly
                         class="w-full bg-transparent text-white font-mono text-sm py-2 px-3 pr-12 rounded border border-white/10"
                         data-clipboard-target="source"
                         data-controller="binding"
                         data-binding-name-value="privateKeyText"
                         data-action="bitcoin:changed@window->binding#value">
                  <button data-action="clipboard#copy"
                          class="absolute right-2 top-1/2 -translate-y-1/2 text-[#FFB636] p-1.5 hover:text-[#FFB636]/80 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
                    </svg>
                  </button>
                </div>
              </div>

              <div class="space-y-1">
                <span class="text-[#FFB636]">Bitcoin Address</span>
                <div class="relative" data-controller="clipboard" data-clipboard-success-message-value="Bitcoin address copied!">
                  <input type="text"
                         readonly
                         class="w-full bg-transparent text-white font-mono text-sm py-2 px-3 pr-12 rounded border border-white/10"
                         data-clipboard-target="source"
                         data-controller="binding"
                         data-binding-name-value="publicAddressText"
                         data-action="bitcoin:changed@window->binding#value">
                  <button data-action="clipboard#copy"
                          class="absolute right-2 top-1/2 -translate-y-1/2 text-[#FFB636] p-1.5 hover:text-[#FFB636]/80 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div data-controller="tabs"
             data-tabs-active-class="bg-[#FFB636] text-[#F04747]"
             data-tabs-default-tab-value="templates">

          <% if current_user %>
            <div class="flex gap-2 mb-6">
              <button type="button"
                      data-tabs-target="btn"
                      data-tab-id="templates"
                      data-action="tabs#select"
                      class="flex-1 py-2 px-4 rounded-lg bg-white/10 text-white hover:bg-white/20 transition-colors">
                Templates
              </button>
              <button type="button"
                      data-tabs-target="btn"
                      data-tab-id="ai-design"
                      data-action="tabs#select"
                      class="flex-1 py-2 px-4 rounded-lg bg-white/10 text-white hover:bg-white/20 transition-colors">
                AI Design
              </button>
            </div>
          <% end %>

          <div data-tabs-target="tab"
               data-tab-id="templates"
               class="relative">
            <div class="grid grid-cols-1 xl:grid-cols-2 gap-4 mx-auto">
              <% papers.each do |paper| %>
                <% cache paper do %>
                  <%= render "hong_baos/new/steps/design/paper", paper: paper %>
                <% end %>
              <% end %>
            </div>
          </div>

          <%= render "hong_baos/new/steps/design/ai_design", papers_by_user: papers_by_user %>
        </div>
      </div>
    </div>
  </div>

  <!-- Fixed Footer instead of Sticky -->
  <div class="fixed bottom-0 left-0 right-0 mt-auto flex-none bg-[#F04747] border-t border-[#FFB636]/20 p-4 rounded-b-3xl">
    <%= render "hong_baos/new/next_button",
               html_options: {
                 disabled: @hong_bao.paper_id.blank?,
                 data_action: "hong-bao:select@window->disabled#remove"
               } %>
  </div>
</div>

